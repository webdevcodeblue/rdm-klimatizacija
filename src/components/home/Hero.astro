---
// Hero sekcija za homepage
import { Image } from 'astro:assets';
import heroImage from '../../assets/images/hero/klima_uredaji_za_dom.jpg';
---

<section class="hero">
  <div class="hero__background">
    <Image
      src={heroImage}
      alt="Klima uređaji za dom - RDM Klimatizacija"
      class="hero__image"
      widths={[400, 768, 1024, 1920]}
      sizes="100vw"
      loading="eager"
      quality={90}
    />
    <div class="hero__overlay"></div>
  </div>

  <div class="container">
    <div class="hero__content">
      <h1 class="hero__title">
        Profesionalna klimatizacija za
        <span class="hero__highlight">vaš dom i poslovni prostor</span>
      </h1>

      <p class="hero__description">
        Ovlašteni serviser vodećih svjetskih proizvođača.
        Prodaja, montaža i servis klima uređaja, dizalica topline i ventilacijskih sustava.
      </p>

      <div class="hero__search">
        <form class="search-box" action="/pretraga" method="GET">
          <div class="search-box__filters">
            <select class="search-box__select" name="category">
              <option value="">Sve kategorije</option>
              <option value="klima-uredaji">Klima uređaji</option>
              <option value="multi-klima">Multi klima</option>
              <option value="dizalice-topline">Dizalice topline</option>
              <option value="mikroklima">Mikroklima</option>
            </select>

            <select class="search-box__select" name="power">
              <option value="">Snaga</option>
              <option value="2-3">2-3 kW</option>
              <option value="3-4">3-4 kW</option>
              <option value="4-5">4-5 kW</option>
              <option value="5-6">5-6 kW</option>
              <option value="6+">6+ kW</option>
            </select>

            <select class="search-box__select" name="area">
              <option value="">Površina</option>
              <option value="20">do 20 m²</option>
              <option value="30">20-30 m²</option>
              <option value="40">30-40 m²</option>
              <option value="50">40-50 m²</option>
              <option value="50+">50+ m²</option>
            </select>
          </div>

          <button type="submit" class="search-box__button">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
            Pronađi idealnu klimu
          </button>
        </form>
      </div>

      <div class="hero__stats">
        <div class="stat">
          <span class="stat__number">1000+</span>
          <span class="stat__label">Zadovoljnih kupaca</span>
        </div>
        <div class="stat">
          <span class="stat__number">50+</span>
          <span class="stat__label">Proizvoda u ponudi</span>
        </div>
        <div class="stat">
          <span class="stat__number">10+</span>
          <span class="stat__label">Godina iskustva</span>
        </div>
        <div class="stat">
          <span class="stat__number">24/7</span>
          <span class="stat__label">Podrška</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: center;
    padding: var(--space-16) 0;
    overflow: hidden;
  }

  .hero__background {
    position: absolute;
    inset: 0;
    z-index: -1;
    overflow: hidden;
  }

  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to right,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0.3) 100%
    );
  }

  .hero__content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    color: var(--color-white);
  }

  .hero__title {
    font-size: clamp(var(--text-3xl), 6vw, var(--text-6xl));
    font-weight: var(--font-extrabold);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-6);
    animation: fadeInUp 0.8s ease-out;
    color: var(--color-white);
  }

  .hero__highlight {
    display: block;
    color: #60a5fa;
    text-shadow: 0 2px 8px rgba(96, 165, 250, 0.3);
  }

  .hero__description {
    font-size: var(--text-xl);
    opacity: 0.95;
    margin-bottom: var(--space-10);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }

  /* Search Box */
  .hero__search {
    margin-bottom: var(--space-12);
    animation: fadeInUp 0.8s ease-out 0.4s backwards;
  }

  .search-box {
    background: var(--color-white);
    border-radius: var(--border-radius-2xl);
    padding: var(--space-6);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    max-width: 700px;
    margin: 0 auto;
  }

  .search-box__filters {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .search-box__select {
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-lg);
    font-size: var(--text-base);
    color: var(--text-primary);
    background: var(--color-white);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .search-box__select:hover {
    border-color: var(--color-primary);
  }

  .search-box__select:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(0, 86, 179, 0.1);
  }

  .search-box__button {
    width: 100%;
    padding: var(--space-4) var(--space-6);
    background: var(--color-primary);
    color: var(--color-white);
    border: none;
    border-radius: var(--border-radius-lg);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .search-box__button:hover {
    background: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0, 86, 179, 0.3);
  }

  /* Stats */
  .hero__stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-6);
    animation: fadeInUp 0.8s ease-out 0.6s backwards;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .stat__number {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--color-white);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  }

  .stat__label {
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    opacity: 0.9;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero {
      padding: var(--space-12) 0;
    }

    .hero__title {
      font-size: var(--text-4xl);
    }

    .hero__description {
      font-size: var(--text-lg);
      margin-bottom: var(--space-8);
    }

    .hero__search {
      margin-bottom: var(--space-10);
    }
  }

  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding: var(--space-10) 0;
    }

    .hero__title {
      font-size: var(--text-3xl);
      margin-bottom: var(--space-4);
    }

    .hero__description {
      font-size: var(--text-base);
      margin-bottom: var(--space-6);
      padding: 0 var(--space-4);
    }

    .hero__search {
      margin-bottom: var(--space-8);
    }

    .search-box {
      padding: var(--space-4);
      border-radius: var(--border-radius-xl);
    }

    .search-box__filters {
      grid-template-columns: 1fr;
      gap: var(--space-3);
      margin-bottom: var(--space-3);
    }

    .search-box__select {
      padding: var(--space-3);
      font-size: var(--text-sm);
    }

    .search-box__button {
      padding: var(--space-3) var(--space-5);
      font-size: var(--text-base);
    }

    .hero__stats {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }

    .stat__number {
      font-size: var(--text-2xl);
    }

    .stat__label {
      font-size: var(--text-xs);
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: var(--space-8) 0;
    }

    .hero__title {
      font-size: var(--text-2xl);
      line-height: 1.2;
    }

    .hero__description {
      font-size: var(--text-sm);
      padding: 0 var(--space-2);
    }

    .search-box {
      padding: var(--space-3);
    }

    .search-box__select {
      padding: var(--space-2);
    }

    .hero__stats {
      gap: var(--space-4);
    }

    .stat__number {
      font-size: var(--text-xl);
    }
  }
</style>