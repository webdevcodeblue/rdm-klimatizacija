---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import BlogCard from '../../components/blog/BlogCard.astro';
import BlogPostSchema from '../../components/seo/BlogPostSchema.astro';
import BreadcrumbSchema from '../../components/seo/BreadcrumbSchema.astro';
import { getCollection, getEntry } from 'astro:content';

// Get slug from URL params
const { slug } = Astro.params;

// Fetch the blog post entry
const entry = await getEntry('blog', slug);

// If post doesn't exist, return 404
if (!entry) {
  return Astro.redirect('/404');
}

// Render markdown content
const { Content } = await entry.render();
const post = entry.data;

// Format date
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('hr-HR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  }).format(date);
};

// Get related posts (same category or tags)
const allPosts = await getCollection('blog', ({ data }) => {
  return data.published !== false;
});

const relatedPosts = allPosts
  .filter(p => p.slug !== slug && (
    p.data.category === post.category ||
    p.data.tags?.some(tag => post.tags?.includes(tag))
  ))
  .slice(0, 3)
  .map(p => ({
    slug: p.slug,
    title: p.data.title,
    description: p.data.description,
    author: p.data.author,
    publishDate: p.data.publishDate,
    image: p.data.image,
    category: p.data.category,
    tags: p.data.tags,
    featured: p.data.featured
  }));

// Social share URLs
const currentUrl = `https://rdm-klimatizacija.com/blog/${slug}`;
const shareUrls = {
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(currentUrl)}`,
  twitter: `https://twitter.com/intent/tweet?url=${encodeURIComponent(currentUrl)}&text=${encodeURIComponent(post.title)}`,
  linkedin: `https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(currentUrl)}&title=${encodeURIComponent(post.title)}`
};

// Schema data
const blogPostData = {
  title: post.title,
  description: post.description,
  author: post.author,
  date: post.publishDate,
  image: post.image,
  category: post.category,
  tags: post.tags,
  slug: slug
};

const breadcrumbItems = [
  { name: 'Početna', href: '/' },
  { name: 'Blog', href: '/blog' },
  { name: post.title, href: `/blog/${slug}` }
];
---

<BaseLayout
  title={`${post.title} | RDM Klimatizacija Blog`}
  description={post.description}
  keywords={post.tags?.join(', ') || 'klimatizacija, klima uređaji, savjeti'}
>
  <BlogPostSchema post={blogPostData} />
  <BreadcrumbSchema items={breadcrumbItems} />
  <Header />

  <main class="blog-post">
    <!-- Breadcrumb -->
    <div class="breadcrumb">
      <div class="container">
        <nav aria-label="Breadcrumb">
          <ol class="breadcrumb__list">
            <li class="breadcrumb__item">
              <a href="/">Početna</a>
            </li>
            <li class="breadcrumb__item">
              <a href="/blog">Blog</a>
            </li>
            <li class="breadcrumb__item active">
              {post.title}
            </li>
          </ol>
        </nav>
      </div>
    </div>

    <!-- Post Header -->
    <article class="post">
      <div class="container">
        <div class="post__header">
          {post.category && (
            <span class="post__category">{post.category}</span>
          )}

          <h1 class="post__title">{post.title}</h1>

          <div class="post__meta">
            <div class="post__meta-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
              <span>{post.author}</span>
            </div>

            <div class="post__meta-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              <time datetime={post.publishDate.toISOString()}>
                {formatDate(post.publishDate)}
              </time>
            </div>

            <div class="post__meta-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
              <span>5 min čitanja</span>
            </div>
          </div>

          <div class="post__image">
            <img
              src={post.image}
              alt={post.title}
            />
          </div>
        </div>

        <div class="post__layout">
          <!-- Main Content -->
          <div class="post__content">
            <div class="prose">
              <Content />
            </div>

            <!-- Tags -->
            {post.tags && post.tags.length > 0 && (
              <div class="post__tags">
                <h3>Oznake:</h3>
                <div class="tags-list">
                  {post.tags.map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              </div>
            )}

            <!-- Share -->
            <div class="post__share">
              <h3>Podijelite članak:</h3>
              <div class="share-buttons">
                <a
                  href={shareUrls.facebook}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="share-button share-button--facebook"
                  aria-label="Share on Facebook"
                >
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
                  </svg>
                  Facebook
                </a>
                <a
                  href={shareUrls.twitter}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="share-button share-button--twitter"
                  aria-label="Share on Twitter"
                >
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"></path>
                  </svg>
                  Twitter
                </a>
                <a
                  href={shareUrls.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="share-button share-button--linkedin"
                  aria-label="Share on LinkedIn"
                >
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
                  </svg>
                  LinkedIn
                </a>
              </div>
            </div>
          </div>

          <!-- Sidebar -->
          <aside class="post__sidebar">
            <!-- Author Card -->
            <div class="author-card">
              <div class="author-card__avatar">
                <img src="/logo.png" alt="RDM Klimatizacija" />
              </div>
              <div class="author-card__info">
                <h3>{post.author}</h3>
                <p>Stručnjak za klimatizaciju</p>
              </div>
            </div>

            <!-- CTA Card -->
            <div class="cta-card">
              <h3>Trebate savjet?</h3>
              <p>Naši stručnjaci su tu da vam pomognu u odabiru idealnog klima uređaja</p>
              <a href="/kontakt" class="cta-button">
                Kontaktirajte nas
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </a>
            </div>
          </aside>
        </div>
      </div>
    </article>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="related-posts">
        <div class="container">
          <h2 class="section-title">Povezani članci</h2>
          <div class="related-posts__grid">
            {relatedPosts.map(relatedPost => (
              <BlogCard post={relatedPost} />
            ))}
          </div>
        </div>
      </section>
    )}
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Breadcrumb */
  .breadcrumb {
    background: var(--color-gray-50);
    padding: var(--space-3) 0;
    border-bottom: 1px solid var(--border-color);
  }

  .breadcrumb__list {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
  }

  .breadcrumb__item {
    font-size: var(--text-sm);
  }

  .breadcrumb__item a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .breadcrumb__item a:hover {
    color: var(--color-primary);
  }

  .breadcrumb__item.active {
    color: var(--text-primary);
    font-weight: var(--font-medium);
  }

  .breadcrumb__item:not(:last-child)::after {
    content: '/';
    margin: 0 var(--space-2);
    color: var(--text-muted);
  }

  /* Post */
  .post {
    padding: var(--space-16) 0;
    background: var(--color-white);
  }

  .post__header {
    max-width: 900px;
    margin: 0 auto var(--space-12);
    text-align: center;
  }

  .post__category {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    background: var(--color-primary);
    color: var(--color-white);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    border-radius: var(--border-radius-base);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-4);
  }

  .post__title {
    font-size: var(--text-5xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    line-height: 1.2;
    margin-bottom: var(--space-6);
  }

  .post__meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-6);
    flex-wrap: wrap;
    margin-bottom: var(--space-8);
  }

  .post__meta-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--text-secondary);
    font-size: var(--text-base);
  }

  .post__meta-item svg {
    color: var(--color-primary);
  }

  .post__image {
    width: 100%;
    height: 500px;
    border-radius: var(--border-radius-2xl);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .post__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Post Layout */
  .post__layout {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: var(--space-8);
    max-width: 1300px;
    margin: 0 auto;
  }

  /* Post Content */
  .post__content {
    min-width: 0;
  }

  /* Prose Styles */
  .prose {
    font-size: var(--text-lg);
    line-height: 1.8;
    color: var(--text-primary);
  }

  .prose :global(h2) {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-top: var(--space-12);
    margin-bottom: var(--space-4);
  }

  .prose :global(h3) {
    font-size: var(--text-2xl);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-top: var(--space-8);
    margin-bottom: var(--space-3);
  }

  .prose :global(p) {
    margin-bottom: var(--space-6);
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--space-6);
    padding-left: var(--space-8);
  }

  .prose :global(li) {
    margin-bottom: var(--space-2);
  }

  .prose :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
    transition: color var(--transition-fast);
  }

  .prose :global(a:hover) {
    color: var(--color-primary-hover);
  }

  .prose :global(strong) {
    font-weight: var(--font-bold);
    color: var(--text-primary);
  }

  .prose :global(blockquote) {
    padding-left: var(--space-6);
    border-left: 4px solid var(--color-primary);
    margin: var(--space-8) 0;
    font-style: italic;
    color: var(--text-secondary);
  }

  .prose :global(img) {
    border-radius: var(--border-radius-lg);
    margin: var(--space-8) 0;
  }

  /* Tags */
  .post__tags {
    margin-top: var(--space-12);
    padding-top: var(--space-8);
    border-top: 1px solid var(--border-color);
  }

  .post__tags h3 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .tag {
    padding: var(--space-2) var(--space-4);
    background: var(--color-gray-100);
    color: var(--text-secondary);
    font-size: var(--text-sm);
    border-radius: var(--border-radius-base);
    transition: all var(--transition-fast);
  }

  .tag:hover {
    background: var(--color-primary-light);
    color: var(--color-primary);
  }

  /* Share */
  .post__share {
    margin-top: var(--space-8);
    padding-top: var(--space-8);
    border-top: 1px solid var(--border-color);
  }

  .post__share h3 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .share-buttons {
    display: flex;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .share-button {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    border-radius: var(--border-radius-lg);
    font-weight: var(--font-medium);
    text-decoration: none;
    transition: all var(--transition-fast);
    color: var(--color-white);
  }

  .share-button--facebook {
    background: #1877f2;
  }

  .share-button--facebook:hover {
    background: #145dbf;
    transform: translateY(-2px);
  }

  .share-button--twitter {
    background: #1da1f2;
  }

  .share-button--twitter:hover {
    background: #1a8cd8;
    transform: translateY(-2px);
  }

  .share-button--linkedin {
    background: #0077b5;
  }

  .share-button--linkedin:hover {
    background: #006399;
    transform: translateY(-2px);
  }

  /* Sidebar */
  .post__sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  /* Author Card */
  .author-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-4);
    padding: var(--space-6);
    background: var(--bg-secondary);
    border-radius: var(--border-radius-xl);
  }

  .author-card__avatar {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-white);
    border-radius: var(--border-radius-lg);
    flex-shrink: 0;
    overflow: hidden;
    border: 2px solid var(--border-color);
  }

  .author-card__avatar img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: var(--space-2);
  }

  .author-card__info h3 {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-1);
  }

  .author-card__info p {
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  /* CTA Card */
  .cta-card {
    padding: var(--space-6);
    background: linear-gradient(135deg, #0056b3 0%, #003d82 100%);
    color: var(--color-white);
    border-radius: var(--border-radius-xl);
  }

  .cta-card h3 {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-3);
  }

  .cta-card p {
    font-size: var(--text-base);
    opacity: 0.95;
    margin-bottom: var(--space-5);
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    background: var(--color-white);
    color: var(--color-primary);
    border-radius: var(--border-radius-lg);
    font-weight: var(--font-semibold);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  /* Related Posts */
  .related-posts {
    padding: var(--space-16) 0;
    background: var(--bg-secondary);
  }

  .section-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-8);
  }

  .related-posts__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-8);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .post__layout {
      grid-template-columns: 1fr;
    }

    .post__sidebar {
      max-width: 600px;
      margin: 0 auto;
    }

    .related-posts__grid {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .post {
      padding: var(--space-8) 0;
    }

    .post__header {
      margin-bottom: var(--space-8);
    }

    .post__title {
      font-size: var(--text-3xl);
    }

    .post__meta {
      gap: var(--space-3);
      font-size: var(--text-sm);
    }

    .post__image {
      height: 300px;
    }

    .prose {
      font-size: var(--text-base);
    }

    .prose :global(h2) {
      font-size: var(--text-2xl);
    }

    .prose :global(h3) {
      font-size: var(--text-xl);
    }

    .share-buttons {
      flex-direction: column;
    }

    .share-button {
      justify-content: center;
    }

    .related-posts {
      padding: var(--space-12) 0;
    }

    .related-posts__grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
  }

  @media (max-width: 480px) {
    .post__title {
      font-size: var(--text-2xl);
    }

    .post__image {
      height: 250px;
      border-radius: var(--border-radius-lg);
    }

    .breadcrumb__item {
      font-size: var(--text-xs);
    }
  }
</style>
