---
import { formatSoundLevel, formatWarranty, formatPower, formatArea } from '../../utils/formatSpecifications';

export interface Props {
  product: any;
}

const { product } = Astro.props;

const discountPercentage = product.originalPrice && product.price
  ? Math.round((1 - product.price / product.originalPrice) * 100)
  : 0;

// Function to split model into name and power
function splitModelIntoParts(model: string) {
  // Match pattern: text + space + number + optional comma/dot + optional number + space + kW
  const match = model.match(/^(.+?)\s+([\d]+[,.]?\d*\s*kW)$/i);
  if (match) {
    return {
      name: match[1].trim(),
      power: match[2].trim()
    };
  }
  return { name: model, power: null };
}

const modelParts = splitModelIntoParts(product.model || '');
---

<div class="product-info">
  <!-- Header with manufacturer and badges -->
  <div class="product-info__header">
    <span class="product-info__manufacturer">{product.manufacturer}</span>
    <div class="product-info__badges">
      {product.badge && (
        <span class="badge badge--{product.badge.toLowerCase()}">{product.badge}</span>
      )}
      {product.warranty && (
        <span class="badge badge--warranty">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
          </svg>
          Jamstvo: {formatWarranty(product.warranty)}
        </span>
      )}
    </div>
  </div>

  <!-- Product Title -->
  <h1 class="product-info__title">
    {product.manufacturer} {product.name}
  </h1>
  <p class="product-info__model">
    {modelParts.name}
    {modelParts.power && <span class="power-highlight"> {modelParts.power}</span>}
  </p>

  <!-- Quick Info Cards -->
  <div class="product-info__quick-info">
    {product.specifications.cooling && (
      <div class="quick-info-item">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="12" y1="2" x2="12" y2="6"></line>
          <line x1="12" y1="18" x2="12" y2="22"></line>
          <line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line>
          <line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line>
          <line x1="2" y1="12" x2="6" y2="12"></line>
          <line x1="18" y1="12" x2="22" y2="12"></line>
          <line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line>
          <line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line>
        </svg>
        <span class="quick-info-label">Snaga hlađenja</span>
        <span class="quick-info-value">{formatPower(product.specifications.cooling)}</span>
      </div>
    )}
    {product.specifications.heating && (
      <div class="quick-info-item">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="5"></circle>
          <line x1="12" y1="1" x2="12" y2="3"></line>
          <line x1="12" y1="21" x2="12" y2="23"></line>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
          <line x1="1" y1="12" x2="3" y2="12"></line>
          <line x1="21" y1="12" x2="23" y2="12"></line>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
        </svg>
        <span class="quick-info-label">Snaga grijanja</span>
        <span class="quick-info-value">{formatPower(product.specifications.heating)}</span>
      </div>
    )}
    {product.specifications.area && (
      <div class="quick-info-item">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
        <span class="quick-info-label">Prikladno za prostor</span>
        <span class="quick-info-value">{formatArea(product.specifications.area)}</span>
      </div>
    )}
    {product.specifications.energyClass && (
      <div class="quick-info-item quick-info-item--highlight">
        <img
          src="/images/icons/energy-efficiency-class.jpg"
          alt="Energetski razred"
          class="energy-icon"
          width="32"
          height="32"
        />
        <span class="quick-info-label">Energetski razred</span>
        <span class="quick-info-value">{product.specifications.energyClass}</span>
      </div>
    )}
  </div>

  <!-- Additional Specs -->
  {(product.specifications.seer || product.specifications.scop || product.specifications.soundLevel || product.specifications.refrigerant) && (
    <div class="product-info__details">
      {(product.specifications.seer || product.specifications.scop) && (
        <div class="detail-row">
          <span class="detail-row__label">SEER / SCOP:</span>
          <span class="detail-row__value">{product.specifications.seer || '-'} / {product.specifications.scop || '-'}</span>
        </div>
      )}
      {product.specifications.soundLevel && (
        <div class="detail-row">
          <span class="detail-row__label">Razina buke:</span>
          <span class="detail-row__value">{formatSoundLevel(product.specifications.soundLevel)}</span>
        </div>
      )}
      {product.specifications.refrigerant && (
        <div class="detail-row">
          <span class="detail-row__label">Rashladni plin:</span>
          <span class="detail-row__value">{product.specifications.refrigerant}</span>
        </div>
      )}
    </div>
  )}

  <!-- Features List -->
  <div class="product-info__features">
    <h3 class="product-info__features-title">Značajke proizvoda:</h3>
    <ul class="features-list">
      {product.features.map((feature: string) => (
        <li class="features-list__item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>{feature}</span>
        </li>
      ))}
    </ul>
  </div>

  <!-- Price Section -->
  <div class="product-info__pricing">
    {product.price && (
      <div class="pricing-box">
        {product.originalPrice && (
          <div class="pricing-box__discount">
            <span class="pricing-box__original">{product.originalPrice.toFixed(2).replace('.', ',')} €</span>
            <span class="pricing-box__badge">-{discountPercentage}%</span>
          </div>
        )}
        <div class="pricing-box__current">
          <span class="pricing-box__price">{product.price.toFixed(2).replace('.', ',')} €</span>
          <span class="pricing-box__vat">Cijena s PDV-om</span>
        </div>
      </div>
    )}

    {product.inStock ? (
      <div class="stock-status stock-status--available">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
        <span>Proizvod je dostupan</span>
      </div>
    ) : (
      <div class="stock-status stock-status--unavailable">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <span>Trenutno nedostupno</span>
      </div>
    )}
  </div>

  <!-- Action Buttons -->
  <div class="product-info__actions">
    <button
      class="btn btn--primary btn--large"
      id="productInquiryBtn"
      data-product-id={product.id}
      data-product-name={product.name}
      data-product-manufacturer={product.manufacturer}
      data-product-model={product.model}
      data-product-image={product.images[0]}
      data-product-power={product.specifications.cooling || product.specifications.power}
      data-product-area={product.specifications.area}
      data-product-energy={product.specifications.energyClass}
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M22 2L11 13"></path>
        <path d="M22 2L15 22L11 13L2 9L22 2Z"></path>
      </svg>
      Pošaljite upit za proizvod
    </button>

    {product.infoSheet && (
      <a href={product.infoSheet} target="_blank" rel="noopener noreferrer" class="btn btn--secondary btn--desktop-only">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="7 10 12 15 17 10"></polyline>
          <line x1="12" y1="15" x2="12" y2="3"></line>
        </svg>
        Informacijski list
      </a>
    )}

    <button class="btn btn--ghost btn--desktop-only" data-action="share">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="18" cy="5" r="3"></circle>
        <circle cx="6" cy="12" r="3"></circle>
        <circle cx="18" cy="19" r="3"></circle>
        <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
        <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
      </svg>
      Podijeli
    </button>
  </div>

  <!-- Share Button for Mobile - Inside content area -->
  <button class="btn btn--share-mobile" data-action="share">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="18" cy="5" r="3"></circle>
      <circle cx="6" cy="12" r="3"></circle>
      <circle cx="18" cy="19" r="3"></circle>
      <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
      <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
    </svg>
    Podijeli proizvod
  </button>
</div>

<style>
  .product-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  /* Header */
  .product-info__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-3);
  }

  .product-info__manufacturer {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: var(--font-semibold);
  }

  .product-info__badges {
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--border-radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .badge--akcija {
    background: var(--color-red-100);
    color: var(--color-red-700);
  }

  .badge--novo {
    background: var(--color-green-100);
    color: var(--color-green-700);
  }

  .badge--premium {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: var(--color-white);
  }

  .badge--warranty {
    background: var(--color-blue-100);
    color: var(--color-blue-700);
  }

  /* Title */
  .product-info__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--color-primary);
    line-height: 1.2;
    margin: 0;
  }

  .product-info__model {
    color: #6b7280; /* Siva boja za naziv */
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    margin: 0;
  }

  .product-info__model .power-highlight {
    color: #dc2626; /* Crvena boja za snagu (kW) */
    font-weight: var(--font-bold);
  }

  /* Quick Info Cards */
  .product-info__quick-info {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 12px;
    margin: 0;
  }

  .quick-info-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 2px;
    padding: 12px 8px;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 6px;
    min-height: 95px;
  }

  /* Hlađenje - Plava pozadina */
  .quick-info-item:nth-child(1) {
    background: linear-gradient(135deg, #dbeafe 0%, #eff6ff 100%);
    border-color: #bfdbfe;
  }

  /* Grijanje - Narančasto-žuta pozadina */
  .quick-info-item:nth-child(2) {
    background: linear-gradient(135deg, #fef3c7 0%, #fef9e7 100%);
    border-color: #fde68a;
  }

  /* Prostor - Svijetlo plava pozadina */
  .quick-info-item:nth-child(3) {
    background: linear-gradient(135deg, #f0f9ff 0%, #f8fafc 100%);
    border-color: #e0f2fe;
  }

  .quick-info-item svg {
    width: 32px;
    height: 32px;
    color: #2563eb;
    flex-shrink: 0;
    margin-bottom: 4px;
  }

  /* Snijeg ikona - plava */
  .quick-info-item:nth-child(1) svg {
    color: #3b82f6;
  }

  /* Sunce ikona - žuto-narandžasta */
  .quick-info-item:nth-child(2) svg {
    color: #f59e0b;
  }

  /* Kuća ikona - plava */
  .quick-info-item:nth-child(3) svg {
    color: #0284c7;
  }

  .quick-info-item--highlight {
    background: #22c55e;
    border-color: #22c55e;
  }

  .quick-info-item--highlight svg {
    color: #ffffff;
  }

  /* Energy icon image styling */
  .energy-icon {
    width: 40px;
    height: 40px;
    object-fit: contain;
    flex-shrink: 0;
    margin-bottom: 2px;
    border-radius: 4px;
  }

  .quick-info-item--highlight .quick-info-label {
    color: #ffffff;
  }

  .quick-info-item--highlight .quick-info-value {
    color: #ffffff;
  }

  .quick-info-label {
    font-size: 11px;
    color: #6b7280;
    line-height: 1.2;
    font-weight: 500;
  }

  .quick-info-value {
    font-size: 16px;
    color: #dc2626;
    font-weight: 800;
    line-height: 1.1;
    margin-top: 2px;
  }

  .spec-card__label {
    font-size: var(--text-xs);
    color: var(--color-gray-600);
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .spec-card__value {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--text-primary);
  }

  /* Additional Details */
  .product-info__details {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border-radius: var(--border-radius-lg);
  }

  .detail-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--color-gray-200);
  }

  .detail-row:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .detail-row__label {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
  }

  .detail-row__value {
    font-weight: var(--font-semibold);
    color: var(--text-primary);
  }

  /* Features */
  .product-info__features {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .product-info__features-title {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin: 0;
  }

  .features-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .features-list__item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-2);
    color: var(--text-secondary);
    font-size: var(--text-sm);
  }

  .features-list__item svg {
    color: var(--color-green-600);
    flex-shrink: 0;
    margin-top: 2px;
  }

  /* Pricing */
  .product-info__pricing {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding: var(--space-6);
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    border-radius: var(--border-radius-lg);
    border: 1px solid var(--color-blue-200);
  }

  .pricing-box__discount {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-2);
  }

  .pricing-box__original {
    text-decoration: line-through;
    color: var(--color-gray-600); /* Tamnija siva - bolja vidljivost */
    font-size: var(--text-xl); /* Veći font */
    font-weight: var(--font-medium); /* Dodaj težinu */
  }

  .pricing-box__badge {
    background: #dc2626; /* Jarka crvena pozadina */
    color: #ffffff; /* Bijeli tekst */
    padding: var(--space-2) var(--space-3); /* Veći padding */
    border-radius: var(--border-radius-md);
    font-size: var(--text-base); /* Veći font */
    font-weight: var(--font-bold);
    box-shadow: 0 2px 4px rgba(220, 38, 38, 0.3); /* Sjena za bolju vidljivost */
  }

  .pricing-box__current {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .pricing-box__price {
    font-size: 34px;
    font-weight: 900;
    color: #dc2626;
    line-height: 1;
    letter-spacing: -0.5px;
  }

  .pricing-box__vat {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
  }

  /* Stock Status */
  .stock-status {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--border-radius-md);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
  }

  .stock-status--available {
    background: var(--color-green-100);
    color: var(--color-green-700);
  }

  .stock-status--unavailable {
    background: var(--color-red-100);
    color: var(--color-red-700);
  }

  /* Action Buttons */
  .product-info__actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--border-radius-lg);
    font-weight: var(--font-semibold);
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all var(--transition-fast);
    font-size: var(--text-base);
  }

  .btn--primary {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .btn--primary:hover {
    background: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(37, 99, 235, 0.3);
  }

  .btn--large {
    padding: var(--space-4) var(--space-6);
    font-size: var(--text-lg);
  }

  .btn--secondary {
    background: var(--color-gray-100);
    color: var(--text-primary);
    border: 2px solid var(--color-gray-300);
  }

  .btn--secondary:hover {
    background: var(--color-gray-200);
    border-color: var(--color-gray-400);
  }

  .btn--ghost {
    background: transparent;
    color: var(--color-gray-600);
    border: 1px solid var(--color-gray-300);
  }

  .btn--ghost:hover {
    background: var(--color-gray-50);
    color: var(--text-primary);
  }

  /* Share button for mobile - visible in content area */
  .btn--share-mobile {
    display: none;
    background: var(--color-white);
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
    margin-top: var(--space-4);
  }

  .btn--share-mobile:hover {
    background: var(--color-primary);
    color: var(--color-white);
  }

  /* Desktop only buttons */
  .btn--desktop-only {
    display: inline-flex;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .product-info__quick-info {
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
    }

    .quick-info-item {
      min-height: 85px;
      padding: 10px 6px;
    }
  }

  @media (max-width: 768px) {
    .product-info__title {
      font-size: var(--text-2xl);
    }

    .product-info__quick-info {
      grid-template-columns: repeat(2, 1fr);
      gap: 8px;
    }

    .quick-info-item {
      min-height: 80px;
      padding: 10px 6px;
    }

    .quick-info-label {
      font-size: 12px;
    }

    .quick-info-value {
      font-size: 16px;
    }

    .quick-info-item svg {
      width: 30px;
      height: 30px;
    }

    .pricing-box__price {
      font-size: var(--text-3xl);
    }

    /* Hide desktop buttons on mobile */
    .btn--desktop-only {
      display: none;
    }

    /* Show share button in content area */
    .btn--share-mobile {
      display: inline-flex;
    }

    .product-info__actions {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 8px var(--space-4);
      background: var(--color-white);
      border-top: 1px solid var(--color-gray-200);
      z-index: 100;
