---
// Kategorije proizvoda
const categories = [
  {
    title: 'KLIMA UREĐAJI',
    description: 'Mono split sustavi za hlađenje i grijanje',
    image: '/images/categories/klima-uredaji.jpg',
    href: '/klima-uredaji',
    count: '250+ proizvoda',
    color: 'blue'
  },
  {
    title: 'MULTI KLIMA UREĐAJI',
    description: 'Jedna vanjska, više unutarnjih jedinica',
    image: '/images/categories/multi-klima.jpg',
    href: '/multi-klima',
    count: '100+ proizvoda',
    color: 'green'
  },
  {
    title: 'DIZALICE TOPLINE',
    description: 'Energetski učinkovito grijanje i hlađenje',
    image: '/images/categories/dizalice-topline.jpg',
    href: '/dizalice-topline',
    count: '50+ proizvoda',
    color: 'orange'
  },
  {
    title: 'MIKROKLIMA',
    description: 'Prijenosni i pokretni klima uređaji',
    image: '/images/categories/mikroklima.jpg',
    href: '/mikroklima',
    count: '30+ proizvoda',
    color: 'purple'
  },
  {
    title: 'ALATI I MATERIJAL',
    description: 'Sve za instalaciju i održavanje',
    image: '/images/categories/alati.jpg',
    href: '/alati-materijal',
    count: '200+ proizvoda',
    color: 'red'
  },
  {
    title: 'MONTAŽA I SERVIS',
    description: 'Profesionalna ugradnja i održavanje',
    image: '/images/categories/servis.jpg',
    href: '/montaza-servis',
    count: 'Naručite uslugu',
    color: 'teal'
  }
];
---

<section class="categories">
  <div class="container">
    <div class="categories__header">
      <h2 class="categories__title">Naša ponuda</h2>
      <p class="categories__subtitle">
        Odaberite kategoriju proizvoda koja vas zanima
      </p>
    </div>

    <div class="categories__grid">
      {categories.map((category, index) => (
        <a
          href={category.href}
          class="category-card"
          data-color={category.color}
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="category-card__image">
            <div class="category-card__overlay"></div>
            <span class="category-card__count">{category.count}</span>
          </div>

          <div class="category-card__content">
            <h3 class="category-card__title">{category.title}</h3>
            <p class="category-card__description">{category.description}</p>

            <span class="category-card__link">
              Pogledaj ponudu
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .categories {
    padding: var(--space-20) 0;
    background: var(--color-white);
  }

  .categories__header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .categories__title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .categories__subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
  }

  .categories__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }

  .category-card {
    display: flex;
    flex-direction: column;
    background: var(--color-white);
    border-radius: var(--border-radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-card);
    transition: all var(--transition-base);
    text-decoration: none;
    animation: fadeInScale 0.6s ease-out backwards;
  }

  .category-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-card-hover);
  }

  .category-card__image {
    position: relative;
    height: 200px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    overflow: hidden;
  }

  /* Različite boje za kategorije */
  .category-card[data-color="blue"] .category-card__image {
    background: linear-gradient(135deg, #667eea 0%, #4c63d2 100%);
  }

  .category-card[data-color="green"] .category-card__image {
    background: linear-gradient(135deg, #00d2ff 0%, #3a7bd5 100%);
  }

  .category-card[data-color="orange"] .category-card__image {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  }

  .category-card[data-color="purple"] .category-card__image {
    background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  }

  .category-card[data-color="red"] .category-card__image {
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  }

  .category-card[data-color="teal"] .category-card__image {
    background: linear-gradient(135deg, #fccb90 0%, #d57eeb 100%);
  }

  .category-card__overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.2);
    transition: opacity var(--transition-base);
  }

  .category-card:hover .category-card__overlay {
    opacity: 0;
  }

  .category-card__count {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    padding: var(--space-2) var(--space-3);
    background: rgba(255, 255, 255, 0.95);
    color: var(--text-primary);
    border-radius: var(--border-radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    box-shadow: var(--shadow-sm);
  }

  .category-card__content {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .category-card__title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
  }

  .category-card__description {
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-4);
    flex-grow: 1;
  }

  .category-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-primary);
    font-weight: var(--font-semibold);
    font-size: var(--text-base);
    transition: all var(--transition-fast);
  }

  .category-card:hover .category-card__link {
    gap: var(--space-3);
    color: var(--color-primary-hover);
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .categories__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .categories {
      padding: var(--space-12) 0;
    }

    .categories__title {
      font-size: var(--text-3xl);
    }

    .categories__subtitle {
      font-size: var(--text-lg);
    }

    .categories__grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .category-card__image {
      height: 150px;
    }

    .category-card__content {
      padding: var(--space-4);
    }
  }
</style>