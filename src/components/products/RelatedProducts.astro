---
import ProductCard from './ProductCard.astro';

export interface Props {
  products: any[];
}

const { products } = Astro.props;

// Format products for ProductCard component
const formattedProducts = products.map(p => ({
  id: p.id,
  slug: p.slug,
  name: p.name,
  manufacturer: p.manufacturer,
  category: p.category || 'Klima uređaji',
  price: p.price,
  originalPrice: p.originalPrice,
  power: p.specifications.power || p.specifications.cooling,
  cooling: p.specifications.cooling,
  heating: p.specifications.heating,
  area: p.specifications.area,
  energyClass: p.specifications.energyClass,
  seer: p.specifications.seer,
  scop: p.specifications.scop,
  features: p.features,
  badge: p.badge,
  image: p.images?.[0] || p.image,
  inStock: p.inStock !== false,
  href: p.href || `/proizvodi/${p.slug}`
}));
---

<section class="related-section">
  <div class="related-section__header">
    <h2 class="related-section__title">Slični proizvodi</h2>
    <p class="related-section__subtitle">Možda vas zanima i ovo</p>
  </div>

  <div class="related-section__grid">
    {formattedProducts.map((product) => (
      <ProductCard product={product} viewMode="grid" />
    ))}
  </div>

  <div class="related-section__footer">
    <a href="/proizvodi" class="related-section__link">
      Pogledajte svu ponudu
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="5" y1="12" x2="19" y2="12"></line>
        <polyline points="12 5 19 12 12 19"></polyline>
      </svg>
    </a>
  </div>
</section>

<style>
  .related-section {
    padding: var(--space-12) 0;
    background: var(--bg-secondary);
  }

  .related-section__header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .related-section__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
  }

  .related-section__subtitle {
    font-size: var(--text-lg);
    color: var(--text-secondary);
  }

  .related-section__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  .related-section__footer {
    text-align: center;
  }

  .related-section__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    background: var(--color-primary);
    color: var(--color-white);
    border-radius: var(--border-radius-full);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .related-section__link:hover {
    background: var(--color-primary-hover);
    gap: var(--space-3);
    transform: scale(1.05);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .related-section__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .related-section {
      padding: var(--space-8) 0;
    }

    .related-section__title {
      font-size: var(--text-2xl);
    }

    .related-section__subtitle {
      font-size: var(--text-base);
    }

    .related-section__grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
  }
</style>
