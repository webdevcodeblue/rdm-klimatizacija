---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import ProductGallery from '../../components/products/ProductGallery.astro';
import ProductInfo from '../../components/products/ProductInfo.astro';
import ProductTabs from '../../components/products/ProductTabs.astro';
import RelatedProducts from '../../components/products/RelatedProducts.astro';
import InquiryModal from '../../components/InquiryModal.astro';
import { getCollection, getEntry } from 'astro:content';

// Generate static paths for all products
export async function getStaticPaths() {
  const products = await getCollection('multi-klima');
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product }
  }));
}

// Get product from props or fetch manually for SSR mode
let entry = Astro.props.product;

// SSR fallback - fetch product manually if not in props (dev mode)
if (!entry) {
  const { slug } = Astro.params;
  entry = await getEntry('multi-klima', slug);

  // If still not found, redirect to 404
  if (!entry) {
    return Astro.redirect('/404');
  }
}

const rawProduct = entry.data;

// Convert Content Collection data to format expected by components
const product = {
  slug: entry.slug,
  id: entry.slug,
  name: rawProduct.name,
  manufacturer: rawProduct.manufacturer,
  model: rawProduct.model,
  category: rawProduct.category,
  price: rawProduct.price,
  originalPrice: rawProduct.originalPrice,
  warranty: rawProduct.warranty,
  images: rawProduct.images.length > 0 ? rawProduct.images : [rawProduct.image],
  specifications: {
    cooling: rawProduct.specifications?.cooling,
    heating: rawProduct.specifications?.heating,
    area: rawProduct.specifications?.area,
    energyClass: rawProduct.specifications?.energyClass,
    seer: rawProduct.specifications?.seer,
    scop: rawProduct.specifications?.scop,
    soundLevel: rawProduct.specifications?.soundLevel,
    refrigerant: rawProduct.specifications?.refrigerant,
    units: rawProduct.specifications?.units,
    totalPower: rawProduct.specifications?.totalPower,
    dimensions: {
      indoor: rawProduct.specifications?.dimensions?.indoor || 'N/A',
      outdoor: rawProduct.specifications?.dimensions?.outdoor || 'N/A'
    },
    weight: {
      indoor: rawProduct.specifications?.weight?.indoor || 'N/A',
      outdoor: rawProduct.specifications?.weight?.outdoor || 'N/A'
    }
  },
  features: rawProduct.features,
  description: entry.body,
  technicalSpecs: {
    general: {
      'Tip uređaja': 'Multi klima sistem',
      'Namjena': 'Hlađenje i grijanje',
      'Energetska klasa hlađenja': rawProduct.specifications?.energyClass || 'N/A',
      'Energetska klasa grijanja': rawProduct.specifications?.energyClass || 'N/A',
      'Broj unutarnjih jedinica': rawProduct.specifications?.units || 'N/A'
    },
    performance: {
      'Kapacitet hlađenja': rawProduct.specifications?.cooling || 'N/A',
      'Kapacitet grijanja': rawProduct.specifications?.heating || 'N/A',
      'Ukupna snaga': rawProduct.specifications?.totalPower || rawProduct.specifications?.power || 'N/A',
      'SEER': rawProduct.specifications?.seer?.toString() || 'N/A',
      'SCOP': rawProduct.specifications?.scop?.toString() || 'N/A',
      'Preporučena površina': rawProduct.specifications?.area || 'N/A'
    },
    technical: {
      'Rashladni plin': rawProduct.specifications?.refrigerant || 'N/A',
      'Napajanje': '220-240V / 50Hz',
      'Bučnost unutarnje': rawProduct.specifications?.soundLevel || 'N/A'
    },
    dimensions: {
      'Unutarnja jedinica': rawProduct.specifications?.dimensions?.indoor || 'N/A',
      'Vanjska jedinica': rawProduct.specifications?.dimensions?.outdoor || 'N/A',
      'Težina unutarnje': rawProduct.specifications?.weight?.indoor || 'N/A',
      'Težina vanjske': rawProduct.specifications?.weight?.outdoor || 'N/A'
    }
  },
  inStock: rawProduct.inStock,
  badge: rawProduct.badge
};

// Get all products for related products section
const allProducts = await getCollection('multi-klima');

// Get related products - show 4 different products (exclude current one)
const relatedProducts = allProducts
  .filter(p => p.slug !== entry.slug) // Exclude current product
  .slice(0, 4) // Show 4 related products
  .map(p => ({
    id: p.slug,
    slug: p.slug,
    name: p.data.name,
    manufacturer: p.data.manufacturer,
    model: p.data.model,
    price: p.data.price,
    originalPrice: p.data.originalPrice,
    image: p.data.image,
    images: p.data.images.length > 0 ? p.data.images : [p.data.image],
    specifications: p.data.specifications,
    features: p.data.features,
    inStock: p.data.inStock,
    badge: p.data.badge,
    href: `/multi-klima/${p.slug}`
  }));

// SEO meta data
const pageTitle = `${product.manufacturer} ${product.name} - RDM Klimatizacija`;
const pageDescription = `${product.manufacturer} ${product.model} - Multi klima sistem, energetski razred ${product.specifications.energyClass}. Cijena: ${product.price}€`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />

  <main class="product-detail">
    <!-- Breadcrumb Navigation -->
    <nav class="breadcrumb" aria-label="Breadcrumb">
      <div class="container">
        <ol class="breadcrumb__list">
          <li class="breadcrumb__item">
            <a href="/" class="breadcrumb__link">Početna</a>
          </li>
          <li class="breadcrumb__item">
            <a href="/multi-klima" class="breadcrumb__link">Multi klima</a>
          </li>
          <li class="breadcrumb__item">
            <span class="breadcrumb__current">{product.manufacturer} {product.model}</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- Product Section -->
    <section class="product-section">
      <div class="container">
        <div class="product-layout">
          <!-- Left: Gallery -->
          <div class="product-layout__gallery">
            <ProductGallery images={product.images} productName={product.name} />
          </div>

          <!-- Right: Product Info -->
          <div class="product-layout__info">
            <ProductInfo product={product} />
          </div>
        </div>

        <!-- Product Details Tabs -->
        <div class="product-details">
          <ProductTabs product={product} />
        </div>
      </div>
    </section>

    <!-- Related Products -->
    {relatedProducts.length > 0 && (
      <section class="related-section">
        <div class="container">
          <RelatedProducts products={relatedProducts} />
        </div>
      </section>
    )}
  </main>

  <Footer />
  <InquiryModal />
</BaseLayout>

<style>
  .product-detail {
    min-height: 100vh;
    background: var(--color-gray-50);
  }

  /* Breadcrumb Navigation */
  .breadcrumb {
    background: var(--color-white);
    border-bottom: 1px solid var(--color-gray-200);
    padding: var(--space-3) 0;
  }

  .breadcrumb__list {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
  }

  .breadcrumb__item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .breadcrumb__item:not(:last-child)::after {
    content: '/';
    color: var(--color-gray-400);
  }

  .breadcrumb__link {
    color: var(--color-gray-600);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .breadcrumb__link:hover {
    color: var(--color-primary);
  }

  .breadcrumb__current {
    color: var(--text-primary);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
  }

  /* Product Section */
  .product-section {
    padding: var(--space-8) 0;
  }

  .product-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    margin-bottom: var(--space-12);
  }

  .product-layout__gallery {
    position: sticky;
    top: var(--space-6);
    height: fit-content;
  }

  /* Product Details */
  .product-details {
    background: var(--color-white);
    border-radius: var(--border-radius-lg);
    padding: var(--space-8);
    margin-top: var(--space-8);
  }

  /* Related Section */
  .related-section {
    background: var(--color-white);
    padding: var(--space-12) 0;
    border-top: 1px solid var(--color-gray-200);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .product-layout {
      gap: var(--space-8);
    }
  }

  @media (max-width: 768px) {
    .product-layout {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .product-layout__gallery {
      position: relative;
      top: 0;
    }

    .product-details {
      padding: var(--space-6) var(--space-4);
      border-radius: 0;
      margin-top: var(--space-6);
    }

    .product-section {
      padding: var(--space-4) 0;
    }

    .related-section {
      padding: var(--space-8) 0;
    }
  }

  @media (max-width: 480px) {
    .breadcrumb__list {
      font-size: var(--text-xs);
    }

    .product-details {
      padding: var(--space-4);
    }
  }
</style>
