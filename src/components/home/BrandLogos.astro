---
// Brendovi koje zastupamo
const brands = [
  { name: 'Toshiba', logo: '/images/o-nama/Toshiba_logo.png' },
  { name: 'Haier', logo: '/images/o-nama/haier_logo.png' },
  { name: 'Maxon', logo: '/images/o-nama/Maxon_logo.gif' },
  { name: 'ISO 9001', logo: '/images/o-nama/iso-9001-certifikat.jpg' }
];
---

<section class="brands">
  <div class="container">
    <div class="brands__header">
      <h2 class="brands__title">Ovlašteni serviser vodećih brendova</h2>
      <p class="brands__subtitle">Surađujemo s najboljim svjetskim proizvođačima</p>
    </div>

    <div class="brands__carousel">
      <div class="brands__track">
        {brands.map((brand) => (
          <div class="brand-item">
            <div class="brand-item__logo">
              <img
                src={brand.logo}
                alt={`${brand.name} logo`}
                loading="lazy"
              />
            </div>
          </div>
        ))}
        <!-- Duplikat za beskonačni loop -->
        {brands.map((brand) => (
          <div class="brand-item">
            <div class="brand-item__logo">
              <img
                src={brand.logo}
                alt={`${brand.name} logo`}
                loading="lazy"
              />
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .brands {
    padding: var(--space-16) 0;
    background: var(--color-gray-50);
    overflow: hidden;
  }

  .brands__header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .brands__title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }

  .brands__subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
  }

  /* Carousel */
  .brands__carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .brands__track {
    display: flex;
    gap: var(--space-12);
    animation: scroll 30s linear infinite;
    width: fit-content;
  }

  .brands__track:hover {
    animation-play-state: paused;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .brand-item {
    flex-shrink: 0;
    width: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-item__logo {
    width: 160px;
    height: 120px;
    background: var(--color-white);
    border-radius: var(--border-radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-4);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-fast);
    overflow: hidden;
  }

  .brand-item__logo:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .brand-item__logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
  }

  @media (max-width: 768px) {
    .brands {
      padding: var(--space-12) 0;
    }

    .brands__title {
      font-size: var(--text-3xl);
    }

    .brands__subtitle {
      font-size: var(--text-lg);
    }

    .brand-item {
      width: 150px;
    }

    .brand-item__logo {
      width: 120px;
      height: 90px;
      padding: var(--space-3);
    }

    .brands__track {
      gap: var(--space-8);
    }
  }

  @media (max-width: 480px) {
    .brands__title {
      font-size: var(--text-2xl);
    }

    .brands__subtitle {
      font-size: var(--text-base);
    }

    .brand-item {
      width: 120px;
    }

    .brand-item__logo {
      width: 100px;
      height: 75px;
      padding: var(--space-2);
    }
  }
</style>