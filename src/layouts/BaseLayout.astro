---
import '../styles/global.css';
import { SITE_CONFIG, getImageUrl, getFullUrl, getOrganizationSchema } from '../config/site';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  keywords?: string;
}

const {
  title,
  description = SITE_CONFIG.seo.defaultDescription,
  image = SITE_CONFIG.brand.logo,
  keywords = SITE_CONFIG.seo.defaultKeywords
} = Astro.props;

const siteUrl = SITE_CONFIG.url;
const canonicalURL = getFullUrl(Astro.url.pathname);
const organizationSchema = getOrganizationSchema();
---

<!DOCTYPE html>
<html lang="hr">
<head>
  <!-- Meta osnovni -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="generator" content={Astro.generator}>

  <!-- Google Search Console Verification -->
  <meta name="google-site-verification" content="9VuGMAVbHtDzIfoUBp0ZkMEBjXjOKVJwKpJCMcJkY3Q" />

  <!-- Security Meta Tags -->
  <meta http-equiv="X-DNS-Prefetch-Control" content="on">
  <meta name="referrer" content="strict-origin-when-cross-origin">
  <meta name="format-detection" content="telephone=no">

  <!-- SEO Meta -->
  <title>{title} | {SITE_CONFIG.company.name}</title>
  <meta name="description" content={description}>
  <meta name="keywords" content={keywords}>
  <meta name="author" content={SITE_CONFIG.company.name}>
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={getImageUrl(image)}>
  <meta property="og:site_name" content={SITE_CONFIG.company.name}>
  <meta property="og:locale" content={SITE_CONFIG.seo.locale}>

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalURL}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={getImageUrl(image)}>

  <!-- Favicon - kompletne postavke za sve uređaje i preglednike -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Montserrat:wght@500;600;700;800;900&display=swap" rel="stylesheet">

  <!-- Structured Data - Organization Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema, null, 2)} />
</head>
<body>
  <a href="#main" class="sr-only focus-trap">Preskoči na glavni sadržaj</a>

  <slot />

  <!-- Analytics placeholder -->
  <script>
    // Google Analytics ili Plausible će biti dodani ovdje
  </script>
</body>
</html>

<style>
  /* Ovdje možemo dodati layout-specifične stilove ako je potrebno */
</style>