---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import InquiryModal from '../components/InquiryModal.astro';
---

<BaseLayout
  title="Kontakt"
  description="Kontaktirajte RDM Klimatizaciju za prodaju klima uređaja ili RM Frigo Team za profesionalnu montažu i servis. Dostupni smo na tel. +385 91 595 77 52."
  keywords="kontakt, RDM Klimatizacija, RM Frigo Team, montaža klima, servis klima, Križevci, klimatizacija"
>
  <Header />

  <main id="main">
    <!-- Hero sekcija -->
    <section class="contact-hero">
      <div class="container">
        <h1 class="contact-hero__title">Kontaktirajte nas</h1>
        <p class="contact-hero__description">
          Tu smo da odgovorimo na sva vaša pitanja o klimatizaciji, grijanju i hlađenju
        </p>
      </div>
    </section>

    <!-- Glavni kontakt sadržaj -->
    <section class="contact-section">
      <div class="container">
        <div class="contact-grid">
          <!-- Kontakt informacije -->
          <div class="contact-info">
            <!-- RDM Klimatizacija -->
            <div class="company-card">
              <div class="company-card__header">
                <h2 class="company-card__title">RDM Klimatizacija</h2>
                <span class="company-card__badge">Prodaja</span>
              </div>
              <p class="company-card__subtitle">Prodaja klima uređaja i opreme</p>

              <div class="contact-details">
                <div class="contact-item">
                  <svg class="contact-item__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                  </svg>
                  <div>
                    <span class="contact-item__label">Telefon</span>
                    <a href="tel:+385915957752" class="contact-item__value">+385 91 595 77 52</a>
                  </div>
                </div>

                <div class="contact-item">
                  <svg class="contact-item__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                    <polyline points="22,6 12,13 2,6"></polyline>
                  </svg>
                  <div>
                    <span class="contact-item__label">Email</span>
                    <a href="mailto:rmfrigoteam@gmail.com" class="contact-item__value">rmfrigoteam@gmail.com</a>
                  </div>
                </div>

                <div class="contact-item">
                  <svg class="contact-item__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                  </svg>
                  <div>
                    <span class="contact-item__label">Adresa</span>
                    <span class="contact-item__value">Potočka ulica 28, Križevci</span>
                  </div>
                </div>

                <div class="contact-item">
                  <svg class="contact-item__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                    <rect x="2" y="9" width="4" height="12"></rect>
                    <circle cx="4" cy="4" r="2"></circle>
                  </svg>
                  <div>
                    <span class="contact-item__label">OIB</span>
                    <span class="contact-item__value">85085617046</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- RM Frigo Team -->
            <div class="company-card">
              <div class="company-card__header">
                <h2 class="company-card__title">RM Frigo Team</h2>
                <span class="company-card__badge company-card__badge--service">Montaža & Servis</span>
              </div>
              <p class="company-card__subtitle">Profesionalna montaža i servisiranje</p>

              <div class="contact-details">
                <div class="contact-item">
                  <svg class="contact-item__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                  </svg>
                  <div>
                    <span class="contact-item__label">Telefon</span>
                    <a href="tel:+385915957752" class="contact-item__value">+385 91 595 77 52</a>
                  </div>
                </div>

                <div class="contact-item">
                  <svg class="contact-item__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                    <polyline points="22,6 12,13 2,6"></polyline>
                  </svg>
                  <div>
                    <span class="contact-item__label">Email</span>
                    <a href="mailto:rmfrigoteam@gmail.com" class="contact-item__value">rmfrigoteam@gmail.com</a>
                  </div>
                </div>

                <div class="contact-item">
                  <svg class="contact-item__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                  </svg>
                  <div>
                    <span class="contact-item__label">Web</span>
                    <a href="http://www.rmfrigoteam.hr" target="_blank" rel="noopener" class="contact-item__value">www.rmfrigoteam.hr</a>
                  </div>
                </div>

                <div class="contact-item">
                  <svg class="contact-item__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                  </svg>
                  <div>
                    <span class="contact-item__label">Adresa</span>
                    <span class="contact-item__value">Potočka ulica 28, Križevci</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Radno vrijeme -->
            <div class="working-hours">
              <h3 class="working-hours__title">Radno vrijeme</h3>
              <div class="working-hours__list">
                <div class="working-hours__item">
                  <span class="working-hours__day">Ponedjeljak - Petak</span>
                  <span class="working-hours__time">08:00 - 17:00</span>
                </div>
                <div class="working-hours__item">
                  <span class="working-hours__day">Subota</span>
                  <span class="working-hours__time">08:00 - 13:00</span>
                </div>
                <div class="working-hours__item">
                  <span class="working-hours__day">Nedjelja</span>
                  <span class="working-hours__time">Zatvoreno</span>
                </div>
              </div>
              <div class="emergency-note">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <line x1="12" y1="8" x2="12" y2="12"></line>
                  <line x1="12" y1="16" x2="12.01" y2="16"></line>
                </svg>
                <span>Hitni servis dostupan 24/7</span>
              </div>
            </div>

            <!-- Područje djelovanja -->
            <div class="service-area">
              <h3 class="service-area__title">Područje djelovanja</h3>
              <div class="service-area__tags">
                <span class="service-tag">Križevci</span>
                <span class="service-tag">Koprivnica</span>
                <span class="service-tag">Bjelovar</span>
                <span class="service-tag">Varaždin</span>
                <span class="service-tag">Zagreb</span>
                <span class="service-tag">Cijela Hrvatska</span>
              </div>
            </div>
          </div>

          <!-- Kontakt forma -->
          <div class="contact-form-wrapper">
            <div class="contact-form-card">
              <h2 class="contact-form__title">Pošaljite nam poruku</h2>
              <p class="contact-form__subtitle">Ispunite formu i javit ćemo vam se u najkraćem mogućem roku</p>

              <form class="contact-form" id="contactForm">
                <div class="form-group">
                  <label for="name" class="form-label">Ime i prezime *</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    class="form-input"
                    required
                    placeholder="Vaše ime i prezime"
                  />
                </div>

                <div class="form-group">
                  <label for="email" class="form-label">Email *</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-input"
                    required
                    placeholder="vas.email@primjer.hr"
                  />
                </div>

                <div class="form-group">
                  <label for="phone" class="form-label">Telefon *</label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="form-input"
                    required
                    placeholder="+385 91 123 4567"
                  />
                </div>

                <div class="form-group">
                  <label for="subject" class="form-label">Predmet *</label>
                  <select id="subject" name="subject" class="form-input" required>
                    <option value="">Odaberite predmet upita</option>
                    <option value="prodaja">Prodaja klima uređaja</option>
                    <option value="montaza">Montaža</option>
                    <option value="servis">Servis</option>
                    <option value="ponuda">Zahtjev za ponudu</option>
                    <option value="ostalo">Ostalo</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="message" class="form-label">Poruka *</label>
                  <textarea
                    id="message"
                    name="message"
                    class="form-input form-textarea"
                    required
                    rows="6"
                    placeholder="Opišite što vas zanima ili kako vam možemo pomoći..."
                  ></textarea>
                </div>

                <div class="form-group">
                  <label class="form-checkbox">
                    <input type="checkbox" name="privacy" required />
                    <span class="form-checkbox__text">
                      Prihvaćam <a href="/privatnost" class="form-link">politiku privatnosti</a> i suglasan sam s obradom mojih osobnih podataka *
                    </span>
                  </label>
                </div>

                <button type="submit" class="form-submit">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="22" y1="2" x2="11" y2="13"></line>
                    <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                  </svg>
                  Pošalji poruku
                </button>

                <div class="form-message" id="formMessage"></div>
              </form>
            </div>
          </div>
        </div>

        <!-- Google Maps -->
        <div class="map-section">
          <h2 class="map-section__title">Pronađite nas</h2>
          <div class="map-container">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2774.7!2d16.5466!3d46.0222!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDbCsDAxJzE5LjkiTiAxNsKwMzInNDcuOCJF!5e0!3m2!1shr!2shr!4v1234567890"
              width="100%"
              height="450"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="RDM Klimatizacija lokacija"
            ></iframe>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <InquiryModal />
</BaseLayout>

<style>
  /* Hero sekcija */
  .contact-hero {
    background: linear-gradient(135deg, var(--color-primary) 0%, #004a99 100%);
    color: var(--color-white);
    padding: var(--space-16) 0 var(--space-12);
    text-align: center;
  }

  .contact-hero__title {
    font-size: clamp(var(--text-3xl), 5vw, var(--text-5xl));
    font-weight: var(--font-extrabold);
    margin-bottom: var(--space-4);
  }

  .contact-hero__description {
    font-size: var(--text-xl);
    opacity: 0.95;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Glavni sadržaj */
  .contact-section {
    padding: var(--space-16) 0;
    background: var(--bg-secondary);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-10);
    margin-bottom: var(--space-12);
  }

  /* Kontakt informacije */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .company-card {
    background: var(--color-white);
    border-radius: var(--border-radius-xl);
    padding: var(--space-8);
    box-shadow: var(--shadow-card);
    border: 1px solid var(--border-color);
  }

  .company-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-2);
  }

  .company-card__title {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
  }

  .company-card__badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-2) var(--space-4);
    background: rgba(0, 86, 179, 0.1);
    color: var(--color-primary);
    border-radius: var(--border-radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .company-card__badge--service {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
  }

  .company-card__subtitle {
    font-size: var(--text-base);
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
  }

  .contact-item__icon {
    flex-shrink: 0;
    color: var(--color-primary);
    margin-top: 2px;
  }

  .contact-item > div {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .contact-item__label {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    font-weight: var(--font-medium);
  }

  .contact-item__value {
    font-size: var(--text-base);
    color: var(--text-primary);
    font-weight: var(--font-semibold);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  a.contact-item__value:hover {
    color: var(--color-primary);
  }

  /* Radno vrijeme */
  .working-hours {
    background: var(--color-white);
    border-radius: var(--border-radius-xl);
    padding: var(--space-6);
    box-shadow: var(--shadow-card);
    border: 1px solid var(--border-color);
  }

  .working-hours__title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .working-hours__list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .working-hours__item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3);
    background: var(--bg-secondary);
    border-radius: var(--border-radius-lg);
  }

  .working-hours__day {
    font-size: var(--text-base);
    color: var(--text-primary);
    font-weight: var(--font-medium);
  }

  .working-hours__time {
    font-size: var(--text-base);
    color: var(--text-secondary);
    font-weight: var(--font-semibold);
  }

  .emergency-note {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-top: var(--space-4);
    padding: var(--space-3);
    background: rgba(239, 68, 68, 0.1);
    border-radius: var(--border-radius-lg);
    color: #dc2626;
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
  }

  .emergency-note svg {
    flex-shrink: 0;
  }

  /* Područje djelovanja */
  .service-area {
    background: var(--color-white);
    border-radius: var(--border-radius-xl);
    padding: var(--space-6);
    box-shadow: var(--shadow-card);
    border: 1px solid var(--border-color);
  }

  .service-area__title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .service-area__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .service-tag {
    display: inline-flex;
    padding: var(--space-2) var(--space-4);
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-full);
    font-size: var(--text-sm);
    color: var(--text-primary);
    font-weight: var(--font-medium);
  }

  /* Kontakt forma */
  .contact-form-wrapper {
    position: sticky;
    top: var(--space-8);
    align-self: flex-start;
  }

  .contact-form-card {
    background: var(--color-white);
    border-radius: var(--border-radius-xl);
    padding: var(--space-8);
    box-shadow: var(--shadow-card);
    border: 1px solid var(--border-color);
  }

  .contact-form__title {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
  }

  .contact-form__subtitle {
    font-size: var(--text-base);
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .form-label {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
  }

  .form-input {
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-lg);
    font-size: var(--text-base);
    color: var(--text-primary);
    background: var(--color-white);
    transition: all var(--transition-fast);
  }

  .form-input:hover {
    border-color: var(--color-primary);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(0, 86, 179, 0.1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
    font-family: inherit;
  }

  .form-checkbox {
    display: flex;
    align-items: flex-start;
    gap: var(--space-2);
    cursor: pointer;
  }

  .form-checkbox input[type="checkbox"] {
    margin-top: 2px;
    cursor: pointer;
  }

  .form-checkbox__text {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .form-link {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .form-link:hover {
    color: var(--color-primary-hover);
  }

  .form-submit {
    padding: var(--space-4) var(--space-6);
    background: var(--color-primary);
    color: var(--color-white);
    border: none;
    border-radius: var(--border-radius-lg);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .form-submit:hover {
    background: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0, 86, 179, 0.3);
  }

  .form-submit:active {
    transform: translateY(0);
  }

  .form-message {
    padding: var(--space-3);
    border-radius: var(--border-radius-lg);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    text-align: center;
    display: none;
  }

  .form-message.success {
    display: block;
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
    border: 1px solid #10b981;
  }

  .form-message.error {
    display: block;
    background: rgba(239, 68, 68, 0.1);
    color: #dc2626;
    border: 1px solid #dc2626;
  }

  /* Mapa */
  .map-section {
    margin-top: var(--space-12);
  }

  .map-section__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .map-container {
    border-radius: var(--border-radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-card);
    border: 1px solid var(--border-color);
  }

  .map-container iframe {
    display: block;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .contact-form-wrapper {
      position: static;
    }

    .contact-hero {
      padding: var(--space-12) 0 var(--space-10);
    }

    .contact-hero__title {
      font-size: var(--text-4xl);
    }

    .contact-hero__description {
      font-size: var(--text-lg);
    }
  }

