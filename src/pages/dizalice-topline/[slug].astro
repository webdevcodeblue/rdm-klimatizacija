---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import ProductGallery from '../../components/products/ProductGallery.astro';
import ProductInfo from '../../components/products/ProductInfo.astro';
import ProductTabs from '../../components/products/ProductTabs.astro';
import RelatedProducts from '../../components/products/RelatedProducts.astro';
import InquiryModal from '../../components/InquiryModal.astro';
import { dizaliceToplineProducts } from '../../data/products/dizalice-topline';

// Get slug from URL params
const { slug } = Astro.params;

// Find product by slug
const rawProduct = dizaliceToplineProducts.find(p => p.slug === slug);

// If product not found, return 404
if (!rawProduct) {
  return Astro.redirect('/404');
}

// Convert new data structure to format expected by components
const product = {
  slug: rawProduct.slug,
  id: rawProduct.id,
  name: rawProduct.name,
  manufacturer: rawProduct.manufacturer,
  model: rawProduct.model,
  category: rawProduct.category,
  price: rawProduct.price,
  originalPrice: rawProduct.originalPrice,
  warranty: rawProduct.warranty,
  images: rawProduct.images || [rawProduct.image],
  specifications: {
    cooling: rawProduct.specifications.coolingPower,
    heating: rawProduct.specifications.heatingPower,
    area: rawProduct.specifications.power + ' kapacitet',
    energyClass: rawProduct.specifications.energyClass,
    seer: rawProduct.specifications.eer,
    scop: rawProduct.specifications.cop,
    soundLevel: rawProduct.specifications.soundLevel,
    refrigerant: rawProduct.specifications.refrigerant,
    dimensions: {
      indoor: rawProduct.specifications.dimensions,
      outdoor: 'Monoblok jedinica'
    },
    weight: {
      indoor: 'N/A',
      outdoor: 'N/A'
    }
  },
  features: rawProduct.features,
  description: rawProduct.description,
  technicalSpecs: {
    general: {
      'Tip uređaja': 'Dizalica topline - Monoblok',
      'Namjena': 'Grijanje, hlađenje, topla voda',
      'Energetska klasa': rawProduct.specifications.energyClass,
      'Kapacitet': rawProduct.specifications.power,
    },
    performance: {
      'Snaga hlađenja': rawProduct.specifications.coolingPower,
      'Snaga grijanja': rawProduct.specifications.heatingPower,
      'Grijanje ventilokonvektori': rawProduct.specifications.heatingFancoil,
      'Grijanje podno': rawProduct.specifications.heatingFloor,
      'Hlađenje ventilokonvektori': rawProduct.specifications.coolingFancoil,
      'Hlađenje podno': rawProduct.specifications.coolingFloor,
      'COP': rawProduct.specifications.cop.toString(),
      'EER': rawProduct.specifications.eer.toString(),
      'Maks. COP': rawProduct.specifications.maxCOP,
    },
    technical: {
      'Rashladni plin': rawProduct.specifications.refrigerant,
      'Protok zraka': rawProduct.specifications.airFlow,
      'Razina buke': rawProduct.specifications.soundLevel,
      'Temperatura vode': rawProduct.specifications.waterTemp,
      'Upravljač': rawProduct.specifications.controller || 'YR-E27 osjetljiv na dodir'
    },
    workingRange: {
      'Hlađenje vanjska temp.': rawProduct.specifications.workingRange.cooling,
      'Grijanje vanjska temp.': rawProduct.specifications.workingRange.heating,
      'Temp. vode za hlađenje': rawProduct.specifications.workingRange.waterCooling,
      'Temp. vode za grijanje': rawProduct.specifications.workingRange.waterHeating
    },
    dimensions: {
      'Dimenzije jedinice': rawProduct.specifications.dimensions,
      'Tip jedinice': 'Monoblok',
      'Montaža': 'Vanjska instalacija',
      'Zaštita': 'IP24'
    }
  },
  inStock: rawProduct.inStock,
  badge: rawProduct.badge
};

// Get related products (other heat pumps)
const allProducts = dizaliceToplineProducts.map(p => ({
  id: p.id,
  slug: p.slug,
  name: p.name,
  manufacturer: p.manufacturer,
  model: p.model,
  price: p.price,
  originalPrice: p.originalPrice,
  image: p.image,
  images: p.images || [p.image],
  specifications: p.specifications,
  features: p.features,
  inStock: p.inStock,
  badge: p.badge
}));

// Get related products - show other 3 heat pumps (exclude current one)
const relatedProducts = allProducts
  .filter(p => p.id !== product.id)
  .slice(0, 3)
  .map(p => ({
    ...p,
    images: p.images || [p.image],
    href: `/dizalice-topline/${p.slug}`
  }));

// SEO meta data
const pageTitle = `${product.manufacturer} ${product.name} - Dizalica topline | RDM Klimatizacija`;
const pageDescription = `${product.manufacturer} ${product.model} dizalica topline snage ${rawProduct.specifications.power}. COP ${rawProduct.specifications.cop}, EER ${rawProduct.specifications.eer}. Grijanje, hlađenje i topla voda. Jamstvo 2 godine. Stručna montaža.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />

  <main class="product-detail">
    <!-- Breadcrumb Navigation -->
    <nav class="breadcrumb" aria-label="Breadcrumb">
      <div class="container">
        <ol class="breadcrumb__list">
          <li class="breadcrumb__item">
            <a href="/" class="breadcrumb__link">Početna</a>
          </li>
          <li class="breadcrumb__item">
            <a href="/dizalice-topline" class="breadcrumb__link">Dizalice topline</a>
          </li>
          <li class="breadcrumb__item">
            <span class="breadcrumb__current">{product.model}</span>
          </li>
        </ol>
      </div>
    </nav>

    <!-- Product Section -->
    <section class="product-section">
      <div class="container">
        <div class="product-layout">
          <!-- Left: Gallery -->
          <div class="product-layout__gallery">
            <ProductGallery images={product.images} productName={product.name} />
          </div>

          <!-- Right: Product Info -->
          <div class="product-layout__info">
            <ProductInfo product={product} />
          </div>
        </div>

        <!-- Product Details Tabs -->
        <div class="product-details">
          <ProductTabs product={product} />
        </div>

        <!-- Additional Info Section -->
        <div class="additional-info">
          <h2>Zašto odabrati Haier Super Aqua dizalice topline?</h2>
          <div class="info-grid">
            <div class="info-item">
              <h3>Visoka učinkovitost</h3>
              <p>COP do 5,05 osigurava maksimalnu uštedu energije i niže račune za grijanje i hlađenje.</p>
            </div>
            <div class="info-item">
              <h3>3-u-1 rješenje</h3>
              <p>Grijanje zimi, hlađenje ljeti i topla voda tijekom cijele godine - sve u jednom uređaju.</p>
            </div>
            <div class="info-item">
              <h3>Rad do -20°C</h3>
              <p>DC inverter tehnologija omogućava pouzdano grijanje čak i pri najnižim zimskim temperaturama.</p>
            </div>
            <div class="info-item">
              <h3>Ekološki prihvatljivo</h3>
              <p>R32 rashladno sredstvo s niskim GWP indeksom i visoka energetska učinkovitost.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Products -->
    {relatedProducts.length > 0 && (
      <section class="related-section">
        <div class="container">
          <RelatedProducts products={relatedProducts} />
        </div>
      </section>
    )}
  </main>

  <Footer />
  <InquiryModal />
</BaseLayout>

<style>
  .product-detail {
    min-height: 100vh;
    background: var(--color-gray-50);
  }

  /* Breadcrumb Navigation */
  .breadcrumb {
    background: var(--color-white);
    border-bottom: 1px solid var(--color-gray-200);
    padding: var(--space-3) 0;
  }

  .breadcrumb__list {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
  }

  .breadcrumb__item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .breadcrumb__item:not(:last-child)::after {
    content: '/';
    color: var(--color-gray-400);
  }

  .breadcrumb__link {
    color: var(--color-gray-600);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .breadcrumb__link:hover {
    color: var(--color-primary);
  }

  .breadcrumb__current {
    color: var(--text-primary);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
  }

  /* Product Section */
  .product-section {
    padding: var(--space-8) 0;
  }

  .product-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    margin-bottom: var(--space-12);
  }

  .product-layout__gallery {
    position: sticky;
    top: var(--space-6);
    height: fit-content;
  }

  /* Product Details */
  .product-details {
    background: var(--color-white);
    border-radius: var(--border-radius-lg);
    padding: var(--space-8);
    margin-top: var(--space-8);
  }

  /* Additional Info Section */
  .additional-info {
    background: var(--color-white);
    border-radius: var(--border-radius-lg);
    padding: var(--space-8);
    margin-top: var(--space-8);
  }

  .additional-info h2 {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-6);
    text-align: center;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  .info-item {
    padding: var(--space-6);
    background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
    border-radius: var(--border-radius-lg);
    border: 1px solid #bbf7d0;
  }

  .info-item h3 {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: #059669;
    margin-bottom: var(--space-3);
  }

  .info-item p {
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* Related Section */
  .related-section {
    background: var(--color-white);
    padding: var(--space-12) 0;
    border-top: 1px solid var(--color-gray-200);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .product-layout {
      gap: var(--space-8);
    }

    .info-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .product-layout {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .product-layout__gallery {
      position: relative;
      top: 0;
    }

    .product-details,
    .additional-info {
      padding: var(--space-6) var(--space-4);
      border-radius: 0;
      margin-top: var(--space-6);
    }

    .product-section {
      padding: var(--space-4) 0;
    }

    .related-section {
      padding: var(--space-8) 0;
    }

    .info-item {
      padding: var(--space-4);
    }
  }

  @media (max-width: 480px) {
    .breadcrumb__list {
      font-size: var(--text-xs);
    }

    .product-details,
    .additional-info {
      padding: var(--space-4);
    }

    .additional-info h2 {
      font-size: var(--text-xl);
    }

    .info-item h3 {
      font-size: var(--text-base);
    }

    .info-item p {
      font-size: var(--text-sm);
    }
  }
</style>