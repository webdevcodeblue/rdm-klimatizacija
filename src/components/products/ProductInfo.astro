---
export interface Props {
  product: any;
}

const { product } = Astro.props;

const discountPercentage = product.originalPrice
  ? Math.round((1 - product.price / product.originalPrice) * 100)
  : 0;
---

<div class="product-info">
  <!-- Header with manufacturer and badges -->
  <div class="product-info__header">
    <span class="product-info__manufacturer">{product.manufacturer}</span>
    <div class="product-info__badges">
      {product.badge && (
        <span class="badge badge--{product.badge.toLowerCase()}">{product.badge}</span>
      )}
      {product.warranty && (
        <span class="badge badge--warranty">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
          </svg>
          Jamstvo: {product.warranty}
        </span>
      )}
    </div>
  </div>

  <!-- Product Title -->
  <h1 class="product-info__title">
    {product.manufacturer} {product.name}
  </h1>
  <p class="product-info__model">{product.model}</p>

  <!-- Quick Specifications Grid -->
  <div class="product-info__specs">
    <div class="spec-card">
      <div class="spec-card__icon spec-card__icon--cooling">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="2" x2="12" y2="6"></line>
          <line x1="12" y1="18" x2="12" y2="22"></line>
          <line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line>
          <line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line>
          <line x1="2" y1="12" x2="6" y2="12"></line>
          <line x1="18" y1="12" x2="22" y2="12"></line>
          <line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line>
          <line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line>
        </svg>
      </div>
      <div class="spec-card__content">
        <span class="spec-card__label">Hlađenje</span>
        <span class="spec-card__value">{product.specifications.cooling}</span>
      </div>
    </div>

    <div class="spec-card">
      <div class="spec-card__icon spec-card__icon--heating">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="5"></circle>
          <line x1="12" y1="1" x2="12" y2="3"></line>
          <line x1="12" y1="21" x2="12" y2="23"></line>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
          <line x1="1" y1="12" x2="3" y2="12"></line>
          <line x1="21" y1="12" x2="23" y2="12"></line>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
        </svg>
      </div>
      <div class="spec-card__content">
        <span class="spec-card__label">Grijanje</span>
        <span class="spec-card__value">{product.specifications.heating}</span>
      </div>
    </div>

    <div class="spec-card">
      <div class="spec-card__icon spec-card__icon--area">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
          <polyline points="9 22 9 12 15 12 15 22"></polyline>
        </svg>
      </div>
      <div class="spec-card__content">
        <span class="spec-card__label">Površina</span>
        <span class="spec-card__value">{product.specifications.area}</span>
      </div>
    </div>

    <div class="spec-card">
      <div class="spec-card__icon spec-card__icon--energy">
        <img
          src="/images/icons/energy-efficiency-class.jpg"
          alt="Energetski razred"
          width="24"
          height="24"
        />
      </div>
      <div class="spec-card__content">
        <span class="spec-card__label">Energija</span>
        <span class="spec-card__value">{product.specifications.energyClass}</span>
      </div>
    </div>
  </div>

  <!-- Additional Specs -->
  <div class="product-info__details">
    <div class="detail-row">
      <span class="detail-row__label">SEER / SCOP:</span>
      <span class="detail-row__value">{product.specifications.seer} / {product.specifications.scop}</span>
    </div>
    <div class="detail-row">
      <span class="detail-row__label">Razina buke:</span>
      <span class="detail-row__value">{product.specifications.soundLevel || 'N/A'}</span>
    </div>
    <div class="detail-row">
      <span class="detail-row__label">Rashladni plin:</span>
      <span class="detail-row__value">{product.specifications.refrigerant}</span>
    </div>
  </div>

  <!-- Features List -->
  <div class="product-info__features">
    <h3 class="product-info__features-title">Značajke proizvoda:</h3>
    <ul class="features-list">
      {product.features.map((feature: string) => (
        <li class="features-list__item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>{feature}</span>
        </li>
      ))}
    </ul>
  </div>

  <!-- Price Section -->
  <div class="product-info__pricing">
    <div class="pricing-box">
      {product.originalPrice && (
        <div class="pricing-box__discount">
          <span class="pricing-box__original">{product.originalPrice.toLocaleString('hr-HR')},00 €</span>
          <span class="pricing-box__badge">-{discountPercentage}%</span>
        </div>
      )}
      <div class="pricing-box__current">
        <span class="pricing-box__price">{product.price.toLocaleString('hr-HR')},00 €</span>
        <span class="pricing-box__vat">Cijena s PDV-om</span>
      </div>
    </div>

    {product.inStock ? (
      <div class="stock-status stock-status--available">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
        <span>Proizvod je dostupan</span>
      </div>
    ) : (
      <div class="stock-status stock-status--unavailable">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <span>Trenutno nedostupno</span>
      </div>
    )}
  </div>

  <!-- Action Buttons -->
  <div class="product-info__actions">
    <button
      class="btn btn--primary btn--large"
      data-product-id={product.id}
      data-action="inquiry"
      data-product-name={`${product.manufacturer} ${product.name}`}
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M22 2L11 13"></path>
        <path d="M22 2L15 22L11 13L2 9L22 2Z"></path>
      </svg>
      Pošaljite upit za proizvod
    </button>

    <a href={`/docs/${product.slug}-datasheet.pdf`} class="btn btn--secondary" download>
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
        <polyline points="7 10 12 15 17 10"></polyline>
        <line x1="12" y1="15" x2="12" y2="3"></line>
      </svg>
      Informacijski list
    </a>

    <button class="btn btn--ghost" data-action="share">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="18" cy="5" r="3"></circle>
        <circle cx="6" cy="12" r="3"></circle>
        <circle cx="18" cy="19" r="3"></circle>
        <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
        <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
      </svg>
      Podijeli
    </button>
  </div>
</div>

<style>
  .product-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  /* Header */
  .product-info__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-3);
  }

  .product-info__manufacturer {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: var(--font-semibold);
  }

  .product-info__badges {
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--border-radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .badge--akcija {
    background: var(--color-red-100);
    color: var(--color-red-700);
  }

  .badge--novo {
    background: var(--color-green-100);
    color: var(--color-green-700);
  }

  .badge--premium {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: var(--color-white);
  }

  .badge--warranty {
    background: var(--color-blue-100);
    color: var(--color-blue-700);
  }

  /* Title */
  .product-info__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    line-height: 1.2;
    margin: 0;
  }

  .product-info__model {
    color: var(--color-gray-600);
    font-size: var(--text-lg);
    margin: 0;
  }

  /* Specification Cards */
  .product-info__specs {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-3);
    background: var(--color-gray-50);
    padding: var(--space-4);
    border-radius: var(--border-radius-lg);
  }

  .spec-card {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    background: var(--color-white);
    padding: var(--space-3);
    border-radius: var(--border-radius-md);
    border: 1px solid var(--color-gray-200);
  }

  .spec-card__icon {
    width: 48px;
    height: 48px;
    border-radius: var(--border-radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .spec-card__icon--cooling {
    background: linear-gradient(135deg, #667eea 0%, #4c1d95 100%);
    color: var(--color-white);
  }

  .spec-card__icon--heating {
    background: linear-gradient(135deg, #f59e0b 0%, #dc2626 100%);
    color: var(--color-white);
  }

  .spec-card__icon--area {
    background: linear-gradient(135deg, #10b981 0%, #047857 100%);
    color: var(--color-white);
  }

  .spec-card__icon--energy {
    background: var(--color-white);
    padding: var(--space-1);
  }

  .spec-card__icon--energy img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .spec-card__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .spec-card__label {
    font-size: var(--text-xs);
    color: var(--color-gray-600);
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .spec-card__value {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--text-primary);
  }

  /* Additional Details */
  .product-info__details {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border-radius: var(--border-radius-lg);
  }

  .detail-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--color-gray-200);
  }

  .detail-row:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .detail-row__label {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
  }

  .detail-row__value {
    font-weight: var(--font-semibold);
    color: var(--text-primary);
  }

  /* Features */
  .product-info__features {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .product-info__features-title {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin: 0;
  }

  .features-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .features-list__item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-2);
    color: var(--text-secondary);
    font-size: var(--text-sm);
  }

  .features-list__item svg {
    color: var(--color-green-600);
    flex-shrink: 0;
    margin-top: 2px;
  }

  /* Pricing */
  .product-info__pricing {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding: var(--space-6);
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
    border-radius: var(--border-radius-lg);
    border: 1px solid var(--color-blue-200);
  }

  .pricing-box__discount {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-2);
  }

  .pricing-box__original {
    text-decoration: line-through;
    color: var(--color-gray-500);
    font-size: var(--text-lg);
  }

  .pricing-box__badge {
    background: var(--color-red-500);
    color: var(--color-white);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--border-radius-md);
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
  }

  .pricing-box__current {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .pricing-box__price {
    font-size: var(--text-4xl);
    font-weight: var(--font-black);
    color: var(--color-primary);
    line-height: 1;
  }

  .pricing-box__vat {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
  }

  /* Stock Status */
  .stock-status {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--border-radius-md);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
  }

  .stock-status--available {
    background: var(--color-green-100);
    color: var(--color-green-700);
  }

  .stock-status--unavailable {
    background: var(--color-red-100);
    color: var(--color-red-700);
  }

  /* Action Buttons */
  .product-info__actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--border-radius-lg);
    font-weight: var(--font-semibold);
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all var(--transition-fast);
    font-size: var(--text-base);
  }

  .btn--primary {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .btn--primary:hover {
    background: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(37, 99, 235, 0.3);
  }

  .btn--large {
    padding: var(--space-4) var(--space-6);
    font-size: var(--text-lg);
  }

  .btn--secondary {
    background: var(--color-gray-100);
    color: var(--text-primary);
    border: 2px solid var(--color-gray-300);
  }

  .btn--secondary:hover {
    background: var(--color-gray-200);
    border-color: var(--color-gray-400);
  }

  .btn--ghost {
    background: transparent;
    color: var(--color-gray-600);
    border: 1px solid var(--color-gray-300);
  }

  .btn--ghost:hover {
    background: var(--color-gray-50);
    color: var(--text-primary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .product-info__title {
      font-size: var(--text-2xl);
    }

    .product-info__specs {
      grid-template-columns: 1fr;
    }

    .pricing-box__price {
      font-size: var(--text-3xl);
    }

    .product-info__actions {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      padding: var(--space-4);
      background: var(--color-white);
      border-top: 1px solid var(--color-gray-200);
      z-index: 100;
      gap: var(--space-2);
    }

    .btn--large {
      padding: var(--space-3) var(--space-4);
      font-size: var(--text-base);
    }
  }

  @media (max-width: 480px) {
    .product-info__title {
      font-size: var(--text-xl);
    }

    .product-info__model {
      font-size: var(--text-base);
    }

    .spec-card {
      padding: var(--space-2);
    }

    .spec-card__icon {
      width: 40px;
      height: 40px;
    }

    .spec-card__value {
      font-size: var(--text-base);
    }
  }
</style>

<script>
  // Share functionality
  const shareBtn = document.querySelector('[data-action="share"]');
  if (shareBtn) {
    shareBtn.addEventListener('click', async () => {
      if (navigator.share) {
        try {
          await navigator.share({
            title: document.title,
            url: window.location.href
          });
        } catch (err) {
          console.log('Share cancelled');
        }
      } else {
        // Fallback - copy to clipboard
        navigator.clipboard.writeText(window.location.href);
        alert('Link kopiran u clipboard!');
      }
    });
  }
</script>