<script>
  // Mobile menu functionality
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenuClose = document.getElementById('mobileMenuClose');
  const mobileMenu = document.getElementById('mobileMenu');

  // Create backdrop
  const backdrop = document.createElement('div');
  backdrop.className = 'mobile-menu-backdrop';
  document.body.appendChild(backdrop);

  function toggleMobileMenu() {
    const isOpen = mobileMenu?.classList.contains('active');

    if (isOpen) {
      mobileMenu?.classList.remove('active');
      backdrop.classList.remove('active');
      mobileMenuBtn?.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    } else {
      mobileMenu?.classList.add('active');
      backdrop.classList.add('active');
      mobileMenuBtn?.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
    }
  }

  mobileMenuBtn?.addEventListener('click', toggleMobileMenu);
  mobileMenuClose?.addEventListener('click', toggleMobileMenu);
  backdrop.addEventListener('click', toggleMobileMenu);

  // Close on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.remove('active');
      backdrop.classList.remove('active');
      mobileMenuBtn?.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    });
  });

  // Mobile submenu toggle functionality
  const mobileToggles = mobileMenu?.querySelectorAll('.mobile-menu__toggle');

  mobileToggles?.forEach((toggle) => {
    toggle.addEventListener('click', () => {
      const menuIndex = toggle.getAttribute('data-menu-index');
      const submenu = mobileMenu?.querySelector(`[data-submenu-index="${menuIndex}"]`);
      const isExpanded = toggle.getAttribute('aria-expanded') === 'true';

      if (submenu) {
        if (isExpanded) {
          submenu.classList.remove('mobile-menu__submenu--expanded');
          toggle.setAttribute('aria-expanded', 'false');
        } else {
          // Close other submenus
          mobileMenu?.querySelectorAll('.mobile-menu__submenu').forEach(sub => {
            sub.classList.remove('mobile-menu__submenu--expanded');
          });
          mobileToggles?.forEach(tog => {
            tog.setAttribute('aria-expanded', 'false');
          });

          // Open this submenu
          submenu.classList.add('mobile-menu__submenu--expanded');
          toggle.setAttribute('aria-expanded', 'true');
        }
      }
    });
  });

  // ========================================
  // SCROLL DETECTION - Jednostavna hysteresis
  // 150px → smanjuje se | 60px → vraća se
  // ========================================
  const header = document.getElementById('mainHeader');
  let isScrolled = false;

  // Pragovi - optimalna zona za stabilnost!
  const SHRINK_AT = 150;  // Header se smanjuje na 150px
  const EXPAND_AT = 60;   // Header se vraća u normalno na 60px
  // DEAD ZONE: 90px (60-150px) - Stabilna zona bez treperenja!

  function updateHeader() {
    const scrollY = window.scrollY;

    if (isScrolled) {
      // Header je trenutno mali
      // Vrati ga u veliko samo ako smo ispod 60px
      if (scrollY < EXPAND_AT) {
        isScrolled = false;
        header?.classList.remove('scrolled');
      }
    } else {
      // Header je trenutno velik
      // Smanji ga samo ako smo iznad 150px
      if (scrollY > SHRINK_AT) {
        isScrolled = true;
        header?.classList.add('scrolled');
      }
    }
  }

  // Slušaj scroll
  let ticking = false;
  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        updateHeader();
        ticking = false;
      });
      ticking = true;
    }
  }, { passive: true });

  // Inicijalizacija pri učitavanju
  if (window.scrollY > SHRINK_AT) {
    isScrolled = true;
    header?.classList.add('scrolled');
  }

  // Import and initialize modular scripts
  const loadHeaderScripts = async () => {
    // Load search module
    const searchScript = document.createElement('script');
    searchScript.src = '/scripts/header/search.js';
    searchScript.onload = () => {
      if (window.HeaderSearch) {
        const search = new window.HeaderSearch();

        // Initialize desktop search
        search.init({
          inputId: 'searchInput',
          dropdownId: 'searchDropdown',
          resultsId: 'searchResults',
          formId: 'searchForm',
          isMobile: false
        });

        // Initialize mobile search
        search.init({
          inputId: 'mobileSearchInput',
          dropdownId: 'mobileSearchDropdown',
          resultsId: 'mobileSearchResults',
          formId: 'mobileSearchForm',
          isMobile: true
        });
      }
    };
    document.head.appendChild(searchScript);
  };

  // Load scripts after DOM is ready
  loadHeaderScripts();
</script>