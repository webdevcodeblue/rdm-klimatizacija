  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenuClose = document.getElementById('mobileMenuClose');
  const mobileMenu = document.getElementById('mobileMenu');

  // Create backdrop
  const backdrop = document.createElement('div');
  backdrop.className = 'mobile-menu-backdrop';
  document.body.appendChild(backdrop);

  function toggleMobileMenu() {
    const isOpen = mobileMenu?.classList.contains('active');

    if (isOpen) {
      mobileMenu?.classList.remove('active');
      backdrop.classList.remove('active');
      mobileMenuBtn?.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    } else {
      mobileMenu?.classList.add('active');
      backdrop.classList.add('active');
      mobileMenuBtn?.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
    }
  }

  mobileMenuBtn?.addEventListener('click', toggleMobileMenu);
  mobileMenuClose?.addEventListener('click', toggleMobileMenu);
  backdrop.addEventListener('click', toggleMobileMenu);

  // Close on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.remove('active');
      backdrop.classList.remove('active');
      mobileMenuBtn?.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    });
  });

  // Scroll detection for sticky header with debouncing and hysteresis
  const header = document.getElementById('mainHeader');
  const headerTopbar = document.getElementById('headerTopbar');
  let lastScrollY = window.scrollY;
  let ticking = false;
  let isScrolled = false;
  let lastStateChangeTime = 0;

  // Configuration - proširene granice za stabilnost
  const SCROLL_UP_THRESHOLD = 100;   // Hide topbar when scrolling down past this point
  const SCROLL_DOWN_THRESHOLD = 30;  // Show topbar when scrolling up below this point
  const MIN_STATE_CHANGE_INTERVAL = 200; // Minimum 200ms between state changes (debounce)
  const VELOCITY_THRESHOLD = 2;      // Minimum scroll velocity to trigger change (prevents micro-movements)

  function updateHeader() {
    const currentTime = Date.now();
    const scrollY = window.scrollY;
    const scrollDelta = scrollY - lastScrollY;
    const timeSinceLastChange = currentTime - lastStateChangeTime;

    // Skip if we're within debounce interval
    if (timeSinceLastChange < MIN_STATE_CHANGE_INTERVAL) {
      lastScrollY = scrollY;
      ticking = false;
      return;
    }

    // Calculate scroll velocity (pixels per frame)
    const velocity = Math.abs(scrollDelta);

    // Hysteresis: Use different thresholds for scrolling up vs down to prevent flickering
    const shouldBeScrolled = isScrolled
      ? scrollY > SCROLL_DOWN_THRESHOLD  // Already scrolled: need to go below lower threshold to unscroll
      : scrollY > SCROLL_UP_THRESHOLD;   // Not scrolled: need to go above upper threshold to scroll

    // Only change state if:
    // 1. The new state is different from current state
    // 2. The scroll velocity is above threshold (prevents micro-movements)
    // 3. Enough time has passed since last state change (debounce)
    if (shouldBeScrolled !== isScrolled && velocity >= VELOCITY_THRESHOLD) {
      isScrolled = shouldBeScrolled;
      lastStateChangeTime = currentTime;

      if (isScrolled) {
        header?.classList.add('scrolled');
      } else {
        header?.classList.remove('scrolled');
      }
    }

    lastScrollY = scrollY;
    ticking = false;
  }

  function requestTick() {
    if (!ticking) {
      window.requestAnimationFrame(updateHeader);
      ticking = true;
    }
  }

  // Listen to scroll events
  window.addEventListener('scroll', requestTick, { passive: true });

  // Initial check on page load
  const initialScrollY = window.scrollY;
  if (initialScrollY > SCROLL_UP_THRESHOLD) {
    isScrolled = true;
    header?.classList.add('scrolled');
  }
  lastStateChangeTime = Date.now();
</script>