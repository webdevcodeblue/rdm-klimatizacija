---
import { klimaProducts } from '../../data/products/klima-uredaji';
import ProductCard from '../products/ProductCard.astro';

// Featured products - prikazujemo 4 proizvoda (2 manja, 2 veća)
const featuredProducts = [
  klimaProducts[0], // Toshiba SEIYA 2.5kW
  klimaProducts[2], // Haier TIDE 2.5kW
  klimaProducts[1], // Toshiba SHORAI 4.6kW
  klimaProducts[3]  // Haier PEARL 5kW
];

// Format products for ProductCard component
const products = featuredProducts.map(p => ({
  id: p.id,
  slug: p.slug,
  name: p.name,
  manufacturer: p.manufacturer,
  category: 'Klima uređaji',
  price: p.price,
  originalPrice: p.originalPrice,
  power: p.specifications.power,
  cooling: p.specifications.cooling,
  heating: p.specifications.heating,
  area: p.specifications.area,
  energyClass: p.specifications.energyClass,
  seer: p.specifications.seer,
  scop: p.specifications.scop,
  features: p.features,
  badge: p.badge,
  image: p.image,
  inStock: p.inStock !== false,
  href: `/klima-uredaji/${p.slug}`
}));
---

<section class="showcase">
  <div class="container">
    <div class="showcase__header">
      <h2 class="showcase__title">Izdvojeni proizvodi</h2>
      <p class="showcase__subtitle">Najpopularniji proizvodi iz naše ponude</p>
    </div>

    <div class="showcase__grid">
      {products.map((product) => (
        <ProductCard product={product} viewMode="grid" />
      ))}
    </div>

    <div class="showcase__footer">
      <a href="/klima-uredaji" class="showcase__link">
        Pogledajte svu ponudu
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .showcase {
    padding: var(--space-20) 0;
    background: var(--bg-secondary);
  }

  .showcase__header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .showcase__title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .showcase__subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
  }

  .showcase__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-6);
    margin-bottom: var(--space-12);
  }

  .showcase__footer {
    text-align: center;
  }

  .showcase__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-8);
    background: var(--color-primary);
    color: var(--color-white);
    border-radius: var(--border-radius-full);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .showcase__link:hover {
    background: var(--color-primary-hover);
    gap: var(--space-3);
    transform: scale(1.05);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .showcase__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .showcase {
      padding: var(--space-12) 0;
    }

    .showcase__title {
      font-size: var(--text-3xl);
    }

    .showcase__subtitle {
      font-size: var(--text-lg);
    }

    .showcase__grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
  }
</style>
