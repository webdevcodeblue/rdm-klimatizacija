---
import { klimaProducts } from '../../data/products/klima-uredaji';

// Featured products - prikazujemo 4 proizvoda (2 manja, 2 veća)
const featuredProducts = [
  klimaProducts[0], // Toshiba SEIYA 2.5kW
  klimaProducts[2], // Haier TIDE 2.5kW
  klimaProducts[1], // Toshiba SHORAI 4.6kW
  klimaProducts[3]  // Haier PEARL 5kW
];

// Format products for display
const products = featuredProducts.map(p => ({
  id: p.id,
  slug: p.slug,
  name: p.name,
  category: 'Klima uređaji',
  price: p.price.toString(),
  originalPrice: p.originalPrice ? p.originalPrice.toString() : null,
  power: p.specifications.power,
  area: p.specifications.area,
  energyClass: p.specifications.energyClass,
  features: p.features.slice(0, 3), // First 3 features
  badge: p.badge,
  image: p.image,
  inStock: p.inStock !== false // Default to true if not specified
}));
---

<section class="showcase">
  <div class="container">
    <div class="showcase__header">
      <h2 class="showcase__title">Izdvojeni proizvodi</h2>
      <p class="showcase__subtitle">Najpopularniji proizvodi iz naše ponude</p>
    </div>

    <div class="showcase__grid">
      {products.map((product) => (
        <article class="product-card">
          {product.badge && (
            <span class={`product-card__badge product-card__badge--${product.badge.toLowerCase().replace(' ', '-')}`}>
              {product.badge}
            </span>
          )}

          <div class="product-card__image">
            <div class="product-card__placeholder"></div>
            <button class="product-card__quick-view" aria-label="Brzi pregled">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
            </button>
          </div>

          <div class={`product-card__stock-status ${product.inStock ? 'product-card__stock-status--available' : 'product-card__stock-status--unavailable'}`}>
            <span class="stock-indicator">{product.inStock ? '✓' : '✗'}</span>
            <span class="stock-text">{product.inStock ? 'Proizvod je dostupan' : 'Proizvod nije dostupan'}</span>
          </div>

          <div class="product-card__content">
            <span class="product-card__category">{product.category}</span>
            <h3 class="product-card__name">{product.name}</h3>

            <div class="product-card__specs">
              {product.power && (
                <span class="spec">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
                  </svg>
                  {product.power}
                </span>
              )}
              {product.area && (
                <span class="spec">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  </svg>
                  {product.area}
                </span>
              )}
              {product.energyClass && (
                <span class="spec spec--energy">{product.energyClass}</span>
              )}
            </div>

            <div class="product-card__features">
              {product.features.map((feature) => (
                <span class="feature-tag">{feature}</span>
              ))}
            </div>

            <div class="product-card__footer">
              <div class="product-card__price">
                {product.originalPrice && (
                  <span class="price-original">{product.originalPrice}€</span>
                )}
                <span class="price-current">{product.price}€</span>
              </div>

              <button class="product-card__action">
                Pošalji upit
              </button>
            </div>
          </div>
        </article>
      ))}
    </div>

    <div class="showcase__footer">
      <a href="/proizvodi" class="showcase__link">
        Pogledajte svu ponudu
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .showcase {
    padding: var(--space-20) 0;
    background: var(--bg-secondary);
  }

  .showcase__header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .showcase__title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .showcase__subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
  }

  .showcase__grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-6);
    margin-bottom: var(--space-12);
  }

  /* Product Card */
  .product-card {
    position: relative;
    background: var(--color-white);
    border-radius: var(--border-radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-card);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-card-hover);
  }

  .product-card__badge {
    position: absolute;
    top: var(--space-3);
    left: var(--space-3);
    z-index: 2;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--border-radius-full);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .product-card__badge--akcija {
    background: var(--color-danger);
    color: var(--color-white);
  }

  .product-card__badge--novo {
    background: var(--color-success);
    color: var(--color-white);
  }

  .product-card__badge--top-cijena {
    background: var(--color-warning);
    color: var(--text-primary);
  }

  .product-card__badge--premium {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .product-card__image {
    position: relative;
    height: 200px;
    background: var(--color-gray-50);
    overflow: hidden;
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  }

  .product-card__quick-view {
    position: absolute;
    top: var(--space-3);
    right: var(--space-3);
    width: 40px;
    height: 40px;
    background: var(--color-white);
    border-radius: var(--border-radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-md);
    cursor: pointer;
    opacity: 0;
    transform: scale(0.8);
    transition: all var(--transition-fast);
  }

  .product-card:hover .product-card__quick-view {
    opacity: 1;
    transform: scale(1);
  }

  .product-card__quick-view:hover {
    background: var(--color-primary);
    color: var(--color-white);
  }

  /* Stock status - simple style */
  .product-card__stock-status {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    background: transparent;
    font-size: 13px;
    font-weight: 600;
  }

  /* Available - green */
  .product-card__stock-status--available {
    color: #10b981;
  }

  .product-card__stock-status--available .stock-indicator {
    background: #10b981;
  }

  /* Unavailable - red */
  .product-card__stock-status--unavailable {
    color: #dc2626;
  }

  .product-card__stock-status--unavailable .stock-indicator {
    background: #dc2626;
  }

  .stock-indicator {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 18px;
    height: 18px;
    color: #ffffff;
    border-radius: 50%;
    font-size: 11px;
    font-weight: 900;
  }

  .product-card__content {
    padding: var(--space-4);
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .product-card__category {
    font-size: var(--text-sm);
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
  }

  .product-card__name {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin: var(--space-2) 0;
    line-height: var(--leading-tight);
  }

  .product-card__specs {
    display: flex;
    gap: var(--space-3);
    margin: var(--space-3) 0;
  }

  .spec {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  .spec svg {
    color: var(--color-primary);
  }

  .spec--energy {
    padding: var(--space-1) var(--space-2);
    background: var(--color-success);
    color: var(--color-white);
    border-radius: var(--border-radius-base);
    font-weight: var(--font-semibold);
  }

  .product-card__features {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin: var(--space-3) 0;
  }

  .feature-tag {
    padding: var(--space-1) var(--space-2);
    background: var(--color-gray-100);
    color: var(--text-secondary);
    border-radius: var(--border-radius-base);
    font-size: var(--text-xs);
  }

  .product-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-4);
    border-top: 1px solid var(--border-color);
    margin-top: auto;
  }

  .product-card__price {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .price-original {
    font-size: var(--text-sm);
    color: var(--text-muted);
    text-decoration: line-through;
  }

  .price-current {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--color-danger);
  }

  .product-card__action {
    padding: var(--space-2) var(--space-4);
    background: var(--color-primary);
    color: var(--color-white);
    border: none;
    border-radius: var(--border-radius-lg);
    font-weight: var(--font-semibold);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .product-card__action:hover {
    background: var(--color-primary-hover);
    transform: scale(1.05);
  }

  .showcase__footer {
    text-align: center;
  }

  .showcase__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-8);
    background: var(--color-primary);
    color: var(--color-white);
    border-radius: var(--border-radius-full);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .showcase__link:hover {
    background: var(--color-primary-hover);
    gap: var(--space-3);
    transform: scale(1.05);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .showcase__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .showcase {
      padding: var(--space-12) 0;
    }

    .showcase__title {
      font-size: var(--text-3xl);
    }

    .showcase__subtitle {
      font-size: var(--text-lg);
    }

    .showcase__grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
  }
</style>